{
  "id": "pgreplica",
  "cmd": null,
  "cpus": 1,
  "mem": 128,
  "disk": 0,
  "instances": 1,
  "container": {
    "docker": {
      "image": "crunchydata/crunchy-postgres:centos7-9.5-1.2.2",
      "network": "BRIDGE",
      "parameters": [
	{
	"key": "hostname",
	"value": "pgreplica"
 	}
	],
      "portMappings": [
      ]
    },
    "volumes": [
      {
        "hostPath": "/nfsfileshare/pgdata",
        "containerPath": "/pgdata",
        "mode": "RW"
      }
    ]
  },
  "env": {
    "PG_MODE": "slave",
    "PG_USER": "testuser",
    "PG_PASSWORD": "testuser",
    "PG_DATABASE": "userdb",
    "PG_ROOT_PASSWORD": "password",
    "PG_MASTER_HOST": "pgmaster.marathon.mesos",
    "PG_MASTER_PORT": "5432",
    "PG_MASTER_USER": "master",
    "PG_MASTER_PASSWORD": "password"
  },
  "labels": {},
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "/usr/pgsql-9.5/bin/pg_isready --host=pgreplica.marathon.mesos"
      },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ]
}
