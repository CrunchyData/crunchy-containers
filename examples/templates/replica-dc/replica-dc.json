{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-postgres-replica-deployment-emptydir",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL replica deployment using emptydir storage. The replicas have the ability to scale.",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "PG_PRIMARY_USER",
        "description": "The username used for primary / replica replication",
        "value": "primaryuser"
    }, {
        "name": "CCP_IMAGE_TAG",
        "value": "centos7-10.3-1.8.2",
        "description": "The image tag to pull with"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "value": "crunchydata",
        "description": "The image prefix to pull with"
    }, {
        "name": "PG_PRIMARY_PASSWORD",
        "description": "The password for the PostgreSQL replication user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PostgreSQL server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PostgreSQL primary user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PostgreSQL administrator",
        "value": "password"
    }, {
        "name": "PG_PRIMARY_SERVICE_NAME",
        "description": "The name of the PostgreSQL primary ",
        "value": "pg-primary-dc"
    }, {
        "name": "PG_REPLICA_SERVICE_NAME",
        "description": "The name of the PostgreSQL replica",
        "value": "pg-replica-dc"
    }, {
        "name": "TEMP_BUFFERS",
        "description": "postgres temp_buffers memory size",
        "value": "9MB"
    }, {
        "name": "MAX_CONNECTIONS",
        "description": "postgres max_connections value",
        "value": "101"
    }, {
        "name": "SHARED_BUFFERS",
        "description": "postgres shared_buffers memory size",
        "value": "129MB"
    }, {
        "name": "MAX_WAL_SENDERS",
        "description": "postgres max_wal_senders value",
        "value": "18"
    }, {
        "name": "WORK_MEM",
        "description": "postgres work_mem memory size",
        "value": "5MB"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_REPLICA_SERVICE_NAME}",
            "labels": {
                "name": "${PG_REPLICA_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PG_REPLICA_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }

    }, {
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_REPLICA_SERVICE_NAME}",
            "creationTimestamp": null
        },
        "spec": {
            "strategy": {
                "type": "Recreate",
                "resources": {}
            },
            "triggers": [{
                "type": "ConfigChange"
            }],
            "replicas": 1,
            "selector": {
                "name": "${PG_REPLICA_SERVICE_NAME}"
            },
            "template": {
                "metadata": {
                    "creationTimestamp": null,
                    "labels": {
                        "name": "${PG_REPLICA_SERVICE_NAME}"
                    }
                },
                "spec": {
                    "containers": [{
                        "name": "server",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },

                        "imagePullPolicy": "Always",
                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "env": [{
                            "name": "PG_PRIMARY_HOST",
                            "value": "${PG_PRIMARY_SERVICE_NAME}"
                        }, {
                            "name": "PG_PRIMARY_SERVICE_NAME",
                            "value": "${PG_PRIMARY_SERVICE_NAME}"
                        }, {
                            "name": "PG_PRIMARY_PORT",
                            "value": "5432"
                        }, {
                            "name": "PGHOST",
                            "value": "/tmp"
                        }, {
                            "name": "PG_MODE",
                            "value": "replica"
                        }, {
                            "name": "PG_PRIMARY_USER",
                            "value": "${PG_PRIMARY_USER}"
                        }, {
                            "name": "PG_PRIMARY_PASSWORD",
                            "value": "${PG_PRIMARY_PASSWORD}"
                        }, {
                            "name": "PG_USER",
                            "value": "${PG_USER}"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
                            "name": "PG_ROOT_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
                            "name": "PG_DATABASE",
                            "value": "${PG_DATABASE}"
                        }],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "securityContext": {
                            "privileged": false
                        },
                        "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }]

                    }],
                    "volumes": [{
                        "name": "pgdata",
                        "emptyDir": {}
                    }],

                    "restartPolicy": "Always",
                    "dnsPolicy": "ClusterFirst"
                }
            }
        },
        "status": {}
    }]
}
