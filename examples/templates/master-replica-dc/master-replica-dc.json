{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-postgres-master-replica-deployment-emptydir",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy Postgresql master with replicas using emptydir, replicas can scale up",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "PG_MASTER_USER",
        "description": "The username used for master-replica replication",
        "value": "master"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "value": "crunchydata",
        "description": "The image prefix to pull with"
    }, {
        "name": "CCP_IMAGE_TAG",
        "value": "centos7-9.5-1.2.7",
        "description": "The image tag to pull with"
    }, {
        "name": "PG_MASTER_PASSWORD",
        "description": "The password for the PostgreSQL replication user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PostgreSQL server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PostgreSQL master user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PostgreSQL administrator",
        "value": "password"
    }, {
        "name": "PG_MASTER_SERVICE_NAME",
        "description": "The name of the PostgreSQL master ",
        "value": "pg-master-dc"
    }, {
        "name": "PG_SLAVE_SERVICE_NAME",
        "description": "The name of the PostgreSQL replica ",
        "value": "pg-slave-dc"
    }, {
        "name": "TEMP_BUFFERS",
        "description": "postgres temp_buffers memory size",
        "value": "9MB"
    }, {
        "name": "MAX_CONNECTIONS",
        "description": "postgres max_connections value",
        "value": "101"
    }, {
        "name": "SHARED_BUFFERS",
        "description": "postgres shared_buffers memory size",
        "value": "129MB"
    }, {
        "name": "MAX_WAL_SENDERS",
        "description": "postgres max_wal_senders value",
        "value": "18"
    }, {
        "name": "WORK_MEM",
        "description": "postgres work_mem memory size",
        "value": "5MB"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_MASTER_SERVICE_NAME}",
            "labels": {
                "name": "${PG_MASTER_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PG_MASTER_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_SLAVE_SERVICE_NAME}",
            "labels": {
                "name": "${PG_SLAVE_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PG_SLAVE_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }

    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_MASTER_SERVICE_NAME}",
            "labels": {
                "name": "${PG_MASTER_SERVICE_NAME}"
            }

        },
        "spec": {
            "containers": [{
                "name": "server",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },

                "imagePullPolicy": "Always",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MASTER_HOST",
                    "value": "${PG_MASTER_SERVICE_NAME}"
                }, {
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "TEMP_BUFFERS",
                    "value": "${TEMP_BUFFERS}"
                }, {
                    "name": "MAX_CONNECTIONS",
                    "value": "${MAX_CONNECTIONS}"
                }, {
                    "name": "SHARED_BUFFERS",
                    "value": "${SHARED_BUFFERS}"
                }, {
                    "name": "MAX_WAL_SENDERS",
                    "value": "${MAX_WAL_SENDERS}"
                }, {
                    "name": "WORK_MEM",
                    "value": "${WORK_MEM}"
                }, {
                    "name": "PG_MASTER_SERVICE_NAME",
                    "value": "${PG_MASTER_SERVICE_NAME}"
                }, {
                    "name": "PG_MASTER_PORT",
                    "value": "5432"
                }, {
                    "name": "PG_MODE",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_USER",
                    "value": "${PG_MASTER_USER}"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "${PG_MASTER_PASSWORD}"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "${PG_ROOT_PASSWORD}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "${PG_PASSWORD}"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }],
                "resources": {},
                "terminationMessagePath": "/dev/termination-log",
                "securityContext": {
                    "privileged": false
                },
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }]

            }],
            "volumes": [{
                "name": "pgdata",
                "emptyDir": {}
            }]

        }
    }, {
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_SLAVE_SERVICE_NAME}",
            "creationTimestamp": null
        },
        "spec": {
            "strategy": {
                "type": "Recreate",
                "resources": {}
            },
            "triggers": [{
                "type": "ConfigChange"
            }],
            "replicas": 1,
            "selector": {
                "name": "${PG_SLAVE_SERVICE_NAME}"
            },
            "template": {
                "metadata": {
                    "creationTimestamp": null,
                    "labels": {
                        "name": "${PG_SLAVE_SERVICE_NAME}"
                    }
                },
                "spec": {
                    "containers": [{
                        "name": "server",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },

                        "imagePullPolicy": "Always",
                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "env": [{
                            "name": "PG_MASTER_HOST",
                            "value": "${PG_MASTER_SERVICE_NAME}"
                        }, {
                            "name": "PG_MASTER_SERVICE_NAME",
                            "value": "${PG_MASTER_SERVICE_NAME}"
                        }, {
                            "name": "PG_MASTER_PORT",
                            "value": "5432"
                        }, {
                            "name": "PGHOST",
                            "value": "/tmp"
                        }, {
                            "name": "PG_MODE",
                            "value": "slave"
                        }, {
                            "name": "PG_MASTER_USER",
                            "value": "${PG_MASTER_USER}"
                        }, {
                            "name": "PG_MASTER_PASSWORD",
                            "value": "${PG_MASTER_PASSWORD}"
                        }, {
                            "name": "PG_USER",
                            "value": "${PG_USER}"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
                            "name": "PG_ROOT_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
                            "name": "PG_DATABASE",
                            "value": "${PG_DATABASE}"
                        }],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "securityContext": {
                            "privileged": false
                        },
                        "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }]

                    }],
                    "volumes": [{
                        "name": "pgdata",
                        "emptyDir": {}
                    }],

                    "restartPolicy": "Always",
                    "dnsPolicy": "ClusterFirst"
                }
            }
        },
        "status": {}
    }]
}
