{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-postgres-database-with-pgbadger",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Database with pgbadger",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "SERVICE_NAME",
        "description": "The name to use for the service and container",
        "value": "badger"
    }, {
        "name": "PG_PRIMARY_USER",
        "description": "The username used for primary / replica replication",
        "value": "primaryuser"
    }, {
        "name": "CCP_IMAGE_TAG",
        "value": "centos7-9.5-1.2.7",
        "description": "The image tag to use"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "value": "crunchydata",
        "description": "The image prefix to use"
    }, {
        "name": "PG_PRIMARY_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG administrator",
        "value": "password"
    }],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${SERVICE_NAME}",
            "labels": {
                "name": "${SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "name": "dbport",
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }, {
                "name": "badgerport",
                "protocol": "TCP",
                "port": 10000,
                "targetPort": 10000,
                "nodePort": 0
            }],
            "selector": {
                "name": "${SERVICE_NAME}"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${SERVICE_NAME}",
            "labels": {
                "name": "${SERVICE_NAME}"
            }
        },
        "spec": {
            "containers": [{
                "name": "postgres",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
  "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },

                "imagePullPolicy": "Always",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_PRIMARY_USER",
                    "value": "${PG_PRIMARY_USER}"
                }, {
                    "name": "PG_MODE",
                    "value": "primary"
                }, {
                    "name": "PG_PRIMARY_PASSWORD",
                    "value": "${PG_PRIMARY_PASSWORD}"
                }, {
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "${PG_PASSWORD}"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "${PG_ROOT_PASSWORD}"
                }],
                "securityContext": {
                    "capabilities": {}
                },

                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }]
            }, {
                "name": "pgbadger",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-pgbadger:${CCP_IMAGE_TAG}",

                "imagePullPolicy": "Always",
                "ports": [{
                    "containerPort": 10000,
                    "protocol": "TCP"
                }],
                "env": [],
                "securityContext": {
                    "capabilities": {}
                },
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": true
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "emptyDir": {}
            }]
        }
    }]
}
