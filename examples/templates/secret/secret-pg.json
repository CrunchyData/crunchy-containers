{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "primary-with-secrets-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL database using secrets",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image to use for the container",
        "value": "centos7-10.3-1.8.2"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "description": "The image prefix to use for the container",
        "value": "crunchydata"
    }, {
        "name": "PG_PRIMARY_USER",
        "description": "The username used for primary / replica replication",
        "value": "primaryuser"
    }, {
        "name": "PG_PRIMARY_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the test user",
        "value": "password"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG administrator",
        "value": "password"
    }],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "secret-pg",
            "labels": {
                "name": "secret-pg"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "secret-pg"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "secret-pg",
            "labels": {
                "name": "secret-pg"
            }
        },
        "spec": {
            "containers": [{
                "name": "secret-pg",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                "imagePullPolicy": "Always",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },

                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MODE",
                    "value": "primary"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_PRIMARY_USER",
                    "value": "${PG_PRIMARY_USER}"
                }, {
                    "name": "PG_MODE",
                    "value": "primary"
                }, {
                    "name": "PG_PRIMARY_PASSWORD",
                    "value": "${PG_PRIMARY_PASSWORD}"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "${PG_PASSWORD}"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "${PG_ROOT_PASSWORD}"
                }],
                "securityContext": {
                    "capabilities": {}
                },

                "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }, {
                        "mountPath": "/pguser",
                        "name": "pguser-volume"
                    }, {
                        "mountPath": "/pgprimary",
                        "name": "pgprimary-volume"
                    }, {
                        "mountPath": "/pgroot",
                        "name": "pgroot-volume"
                    }

                ]
            }],
            "volumes": [{
                    "name": "pgdata",
                    "emptyDir": {}
                }, {
                    "name": "pguser-volume",
                    "secret": {
                        "secretName": "pguser-secret"
                    }
                }, {
                    "name": "pgprimary-volume",
                    "secret": {
                        "secretName": "pgprimary-secret"
                    }
                }, {
                    "name": "pgroot-volume",
                    "secret": {
                        "secretName": "pgroot-secret"
                    }
                }


            ]
        }
    }]
}
