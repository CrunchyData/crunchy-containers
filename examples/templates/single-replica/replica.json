{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-postgres-replica-emptydir",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Replica using emptyDir",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_PREFIX",
        "description": "The image tag to use",
        "value": "crunchydata"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use",
        "value": "centos7-10.3-1.8.2"
    }, {
        "name": "SERVICE_NAME",
        "description": "The name to use for the replica service and pod",
        "value": "pgreplica"
    }, {
        "name": "PG_PRIMARY_HOST",
        "description": "The primary service name the replica will connect to",
        "value": "pgdatabase"
    }, {
        "name": "PG_PRIMARY_USER",
        "description": "The primary user name the replica will connect with",
        "value": "primaryuser"
    }, {
        "name": "PG_PRIMARY_PASSWORD",
        "description": "The primary user password the replica will connect with",
        "value": "password"
    }],
    "objects": [{
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "name": "${SERVICE_NAME}"
                }
            },
            "spec": {
                "ports": [{
                    "name": "postgres",
                    "protocol": "TCP",
                    "port": 5432,
                    "targetPort": 5432,
                    "nodePort": 0
                }],
                "selector": {
                    "name": "${SERVICE_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },

        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "name": "${SERVICE_NAME}"
                }
            },
            "spec": {
                "containers": [{
                    "name": "postgres",
                    "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 60,
                    "timeoutSeconds": 2
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 60,
                    "timeoutSeconds": 2
                },

                    "imagePullPolicy": "Always",
                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "env": [{
                        "name": "PG_PRIMARY_HOST",
                        "value": "${PG_PRIMARY_HOST}"
                    }, {
                        "name": "PG_PRIMARY_USER",
                        "value": "${PG_PRIMARY_USER}"
                    }, {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    }, {
                        "name": "PG_MODE",
                        "value": "replica"
                    }, {
                        "name": "PG_USER",
                        "value": "testuser"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "password"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }, {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "${PG_PRIMARY_PASSWORD}"
                    }],
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }, {
                        "mountPath": "/backup",
                        "name": "backup",
                        "readOnly": true
                    }]
                }],
                "volumes": [{
                    "name": "pgdata",
                    "emptyDir": {}
                }, {
                    "name": "backup",
                    "emptyDir": {}
                }]
            }
        }
    ]
}
