{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-metrics",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Metrics Backend",
            "iconClass": "icon-database",
            "tags": "database,crunchy,postgresql"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "value": "centos7-9.5-1.2.7",
        "description": "The image tag to use"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "value": "crunchydata",
        "description": "The image prefix to use"
    }, {
        "name": "PVC_NAME",
        "description": "The name of the PVC used for storage",
        "value": "crunchy-metrics-pvc"
    }, {
        "name": "PVC_SIZE",
        "description": "The size of the PVC used for storage",
        "value": "200M"
    }, {
        "name": "PVC_ACCESS_MODE",
        "description": "The accessmode of the PVC used for storage",
        "value": "ReadWriteMany"
    }],
    "objects": [{
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${PVC_NAME}"
            },
            "spec": {
                "accessModes": [
                    "${PVC_ACCESS_MODE}"
                ],
                "resources": {
                    "requests": {
                        "storage": "${PVC_SIZE}"
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "crunchy-metrics",
                "labels": {
                    "name": "crunchy-metrics"
                }
            },
            "spec": {
                "ports": [{
                    "name": "prometheus",
                    "protocol": "TCP",
                    "port": 9090,
                    "targetPort": 9090,
                    "nodePort": 0
                }, {
                    "name": "promgateway",
                    "protocol": "TCP",
                    "port": 9091,
                    "targetPort": 9091,
                    "nodePort": 0
                }, {
                    "name": "grafana",
                    "protocol": "TCP",
                    "port": 3000,
                    "targetPort": 3000,
                    "nodePort": 0
                }],
                "selector": {
                    "name": "crunchy-metrics"
                }
            },
            "status": {
                "loadBalancer": {}
            }
        }, {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "crunchy-metrics",
                "labels": {
                    "name": "crunchy-metrics"
                }
            },
            "spec": {
                "securityContext": {
                },

                "containers": [{
                    "name": "prometheus",
                    "image": "${CCP_IMAGE_PREFIX}/crunchy-prometheus:${CCP_IMAGE_TAG}",
                    "imagePullPolicy": "Always",
                    "ports": [{
                        "containerPort": 9090,
                        "protocol": "TCP"
                    }],
                    "env": [],
                    "volumeMounts": [{
                        "mountPath": "/data",
                        "name": "data",
                        "readOnly": false
                    }]
                }, {
                    "name": "promgateway",
                    "image": "${CCP_IMAGE_PREFIX}/crunchy-promgateway:${CCP_IMAGE_TAG}",
                    "imagePullPolicy": "Always",
                    "ports": [{
                        "containerPort": 9091,
                        "protocol": "TCP"
                    }],
                    "env": [],
                    "volumeMounts": []
                }, {
                    "name": "grafana",
                    "image": "${CCP_IMAGE_PREFIX}/crunchy-grafana:${CCP_IMAGE_TAG}",
                    "imagePullPolicy": "Always",
                    "ports": [{
                        "containerPort": 3000,
                        "protocol": "TCP"
                    }],
                    "env": [],
                    "securityContext": {
                        "capabilities": {}
                    },
                    "volumeMounts": [{
                        "mountPath": "/data",
                        "name": "data",
                        "readOnly": false
                    }]
                }],
                "volumes": [{
                    "name": "data",
                    "persistentVolumeClaim": {
                        "claimName": "${PVC_NAME}"
                    }
                }]
            }
        }
    ]
}
