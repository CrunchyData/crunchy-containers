{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-postgres-primary-replica-emptydir",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL primary and replica databases using emptyDir storage.",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "PRIMARY_SERVICE_NAME",
        "description": "The name for the primary service and container",
        "value": "pgprimary"
    }, {
        "name": "REPLICA_SERVICE_NAME",
        "description": "The name for the replica service and container",
        "value": "pgreplica"
    }, {
        "name": "CCP_IMAGE_TAG",
        "value": "centos7-10.3-1.8.2",
        "description": "The image tag to pull with"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "value": "crunchydata",
        "description": "The image prefix to pull with"
    }, {
        "name": "PG_PRIMARY_USER",
        "description": "The username used for primary / replica replication",
        "value": "primaryuser"
    }, {
        "name": "PG_PRIMARY_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "PG_PRIMARY_PORT",
        "description": "The postgresql port",
        "value": "5432"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG administrator",
        "value": "password"
    }],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PRIMARY_SERVICE_NAME}",
            "labels": {
                "name": "${PRIMARY_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PRIMARY_SERVICE_NAME}"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${REPLICA_SERVICE_NAME}",
            "labels": {
                "name": "${REPLICA_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${REPLICA_SERVICE_NAME}"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PRIMARY_SERVICE_NAME}",
            "labels": {
                "name": "${PRIMARY_SERVICE_NAME}"
            }
        },
        "spec": {
            "containers": [{
                "name": "${PRIMARY_SERVICE_NAME}",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },

                "imagePullPolicy": "Always",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_PRIMARY_USER",
                    "value": "${PG_PRIMARY_USER}"
                }, {
                    "name": "PG_MODE",
                    "value": "primary"
                }, {
                    "name": "PG_PRIMARY_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "password"
                }],
                "securityContext": {
                    "capabilities": {}
                },
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }, {
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "emptyDir": {}
            }, {
                "name": "backup",
                "emptyDir": {}
            }]
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${REPLICA_SERVICE_NAME}",
            "labels": {
                "name": "${REPLICA_SERVICE_NAME}"
            }
        },
        "spec": {
            "containers": [{
                "name": "${REPLICA_SERVICE_NAME}",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/usr/pgsql-9.5/bin/psql",
                            "-f",
                            "/opt/cpm/bin/readiness.sql"
                        ]
                    },
                    "initialDelaySeconds": 60,
                    "timeoutSeconds": 1
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/usr/pgsql-9.5/bin/pg_isready",
                            "--dbname=postgres"
                        ]
                    },
                    "initialDelaySeconds": 60,
                    "timeoutSeconds": 1
                },

                "imagePullPolicy": "Always",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MODE",
                    "value": "replica"
                }, {
                    "name": "PG_PRIMARY_HOST",
                    "value": "${PRIMARY_SERVICE_NAME}"
                }, {
                    "name": "PG_PRIMARY_PORT",
                    "value": "5432"
                }, {
                    "name": "PG_PRIMARY_USER",
                    "value": "${PG_PRIMARY_USER}"
                }, {
                    "name": "PG_PRIMARY_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "password"
                }],
                "securityContext": {
                    "capabilities": {}
                },
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }, {
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "emptyDir": {}
            }, {
                "name": "backup",
                "emptyDir": {}
            }]
        }
    }]
}
