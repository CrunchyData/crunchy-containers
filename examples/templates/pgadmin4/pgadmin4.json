{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-pgadmin4-using-pvc",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy pgadmin4 using pvc persistence",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "value": "centos7-10.3-1.8.2",
        "description": "image tag to use"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "value": "crunchydata",
        "description": "image prefix to use"
    }, {
        "name": "PVC_NAME",
        "description": "name to use for the PVC",
        "value": "pgadmin4-pvc"
    }, {
        "name": "PVC_ACCESS_MODE",
        "description": "accessmode to use for the PVC",
        "value": "ReadWriteOnce"
    }, {
        "name": "SERVICE_NAME",
        "description": "The name to use for the service and container",
        "value": "pgadmin4"
    }],

    "objects": [{
        "kind": "PersistentVolumeClaim",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PVC_NAME}"
        },
        "spec": {
            "accessModes": [
                "${PVC_ACCESS_MODE}"
            ],
            "resources": {
                "requests": {
                    "storage": "100M"
                }
            }
        }
    }, {
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${SERVICE_NAME}",
            "labels": {
                "name": "${SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "name": "pgadmin",
                "port": 5050,
                "targetPort": 5050,
                "nodePort": 0
            }],
            "selector": {
                "name": "${SERVICE_NAME}"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${SERVICE_NAME}",
            "labels": {
                "name": "${SERVICE_NAME}"
            }
        },
        "spec": {
            "containers": [{
                "name": "${SERVICE_NAME}",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-pgadmin4:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5050,
                    "protocol": "TCP"
                }],
                "env": [],
                "securityContext": {
                    "capabilities": {}
                },


                "volumeMounts": [{
                    "mountPath": "/.pgadmin",
                    "name": "pgdata",
                    "readOnly": false
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "persistentVolumeClaim": {
                    "claimName": "${PVC_NAME}"
                }
            }]
        }
    }]
}
