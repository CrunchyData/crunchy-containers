{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-postgres-primary-sync-replica-pvc",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Single primary and sync relica which both use a PVC",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "the image tag to use",
        "value": "centos7-10.3-1.8.2"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "description": "the image prefix to use",
        "value": "crunchydata"
    }, {
        "name": "REPLICA_SERVICE_NAME",
        "description": "the name of the replica",
        "value": "syncreplica"
    }, {
        "name": "REPLICA_PVC_NAME",
        "description": "the name of the replica pvc",
        "value": "syncreplica-pvc"
    }, {
        "name": "REPLICA_PVC_SIZE",
        "description": "the size of the replica pvc",
        "value": "300M"
    }, {
        "name": "PVC_ACCESS_MODE",
        "description": "the accessmode of the PVCs",
        "value": "ReadWriteOnce"
    }, {
        "name": "PRIMARY_SERVICE_NAME",
        "description": "the name of the primary",
        "value": "syncprimary"
    }, {
        "name": "PRIMARY_PVC_NAME",
        "description": "the name of the primary pvc",
        "value": "syncprimary-pvc"
    }, {
        "name": "PRIMARY_PVC_SIZE",
        "description": "the size of the primary pvc",
        "value": "500M"
    }, {
        "name": "PRIMARY_PASSWORD",
        "description": "the password of the primary user",
        "value": "password"
    }, {
        "name": "USER_PASSWORD",
        "description": "the password of the test user",
        "value": "password"
    }],
    "objects": [{
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${REPLICA_PVC_NAME}"
            },
            "spec": {
                "accessModes": [
                    "${PVC_ACCESS_MODE}"
                ],
                "resources": {
                    "requests": {
                        "storage": "${REPLICA_PVC_SIZE}"
                    }
                }
            }
        }, {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${PRIMARY_PVC_NAME}"
            },
            "spec": {
                "accessModes": [
                    "${PVC_ACCESS_MODE}"
                ],
                "resources": {
                    "requests": {
                        "storage": "${PRIMARY_PVC_SIZE}"
                    }
                }
            }
        },

        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${REPLICA_SERVICE_NAME}",
                "labels": {
                    "name": "${REPLICA_SERVICE_NAME}"
                }
            },
            "spec": {
                "ports": [{
                    "protocol": "TCP",
                    "port": 5432,
                    "targetPort": 5432,
                    "nodePort": 0
                }],
                "selector": {
                    "name": "${REPLICA_SERVICE_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        }, {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${PRIMARY_SERVICE_NAME}",
                "labels": {
                    "name": "${PRIMARY_SERVICE_NAME}"
                }
            },
            "spec": {
                "ports": [{
                    "protocol": "TCP",
                    "port": 5432,
                    "targetPort": 5432,
                    "nodePort": 0
                }],
                "selector": {
                    "name": "${PRIMARY_SERVICE_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },

        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${REPLICA_SERVICE_NAME}",
                "labels": {
                    "name": "${REPLICA_SERVICE_NAME}"
                }
            },
            "spec": {
                "securityContext": {
                },

                "containers": [{
                    "name": "postgres",
                    "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                    "imagePullPolicy": "Always",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },

                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "env": [{
                        "name": "PG_PRIMARY_HOST",
                        "value": "${PRIMARY_SERVICE_NAME}"
                    }, {
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    }, {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }, {
                        "name": "PG_MODE",
                        "value": "replica"
                    }, {
                        "name": "SYNC_REPLICA",
                        "value": "${REPLICA_SERVICE_NAME}"
                    }, {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "${PRIMARY_PASSWORD}"
                    }, {
                        "name": "PG_USER",
                        "value": "testuser"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "${USER_PASSWORD}"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "${ROOT_PASSWORD}"
                    }],
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }, {
                        "mountPath": "/backup",
                        "name": "backup",
                        "readOnly": true
                    }]
                }],
                "volumes": [{
                    "name": "pgdata",
                    "persistentVolumeClaim": {
                        "claimName": "${PRIMARY_PVC_NAME}"
                    }
                }, {
                    "name": "backup",
                    "emptyDir": {}
                }]
            }
        }, {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${PRIMARY_SERVICE_NAME}",
                "labels": {
                    "name": "${PRIMARY_SERVICE_NAME}"
                }
            },
            "spec": {
                "securityContext": {
                },

                "containers": [{
                    "name": "postgres",
                    "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },

                    "imagePullPolicy": "Always",
                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "env": [{
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }, {
                        "name": "PG_MODE",
                        "value": "primary"
                    }, {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "${PRIMARY_PASSWORD}"
                    }, {
                        "name": "SYNC_REPLICA",
                        "value": "${REPLICA_SERVICE_NAME}"
                    }, {
                        "name": "PG_USER",
                        "value": "testuser"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "${USER_PASSWORD}"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "${ROOT_PASSWORD}"
                    }],
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }, {
                        "mountPath": "/backup",
                        "name": "backup",
                        "readOnly": true
                    }]
                }],
                "volumes": [{
                    "name": "pgdata",
                    "persistentVolumeClaim": {
                        "claimName": "${REPLICA_PVC_NAME}"
                    }
                }, {
                    "name": "backup",
                    "emptyDir": {}
                }]
            }
        }
    ]
}
