{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "primary",
        "labels": {
            "name": "primary"
        }
    },
    "spec": {
        "securityContext": {
        },
        "volumes": [{
            "name": "pgdata",
            "persistentVolumeClaim": {
                "claimName": "crunchy-pgdata-pvc-for-primary"
            }
        }, {
            "name": "pgconf",
            "emptyDir": {
                "medium": "Memory"
            }
        }, {
            "name": "pgwal",
            "emptyDir": {
                "medium": "Memory"
            }
        }, {
            "name": "backup",
            "emptyDir": {
                "medium": "Memory"
            }
        }, {
            "name": "recover",
            "emptyDir": {
                "medium": "Memory"
            }
        }, {
            "name": "backrestrepo",
            "emptyDir": {
                "medium": "Memory"
            }
        }, {
            "name": "sshd",
            "emptyDir": {
                "medium": "Memory"
            }
        }],
        "containers": [{
            "name": "postgres",
            "image": "crunchydata/crunchy-postgres-gis:centos7-10.3-1.8.2",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
            "env": [{
                "name": "PG_PRIMARY_USER",
                "value": "primaryuser"
            }, {
                "name": "PG_MODE",
                "value": "primary"
            }, {
                "name": "PG_PRIMARY_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_PRIMARY_PORT",
                "value": "5432"
            }, {
                "name": "PG_USER",
                "value": "testuser"
            }, {
                "name": "PG_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_DATABASE",
                "value": "userdb"
            }, {
                "name": "PGHOST",
                "value": "/tmp"
            }, {
                "name": "PG_ROOT_PASSWORD",
                "value": "password"
            }],

            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }, {
                "mountPath": "/pgconf",
                "name": "pgconf",
                "readOnly": true
            }, {
                "mountPath": "/pgwal",
                "name": "pgwal",
                "readOnly": false
            }, {
                "mountPath": "/backup",
                "name": "backup",
                "readOnly": false
            }, {
                "mountPath": "/recover",
                "name": "recover",
                "readOnly": false
            }, {
                "mountPath": "/backrestrepo",
                "name": "backrestrepo",
                "readOnly": false
            }, {
                "mountPath": "/sshd",
                "name": "sshd",
                "readOnly": false
            }]
        }]
    }
}
