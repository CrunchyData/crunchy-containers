{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgadmin4",
        "annotations": {
            "openshift.io/display-name": "PGAdmin4 interface from CrunchyData Solutions",
            "description": "PGAdmin4 to use in your OpenShift Project",
            "tags": "quickstart,postgresql",
            "iconClass": "icon-apache",
            "openshift.io/provider-display-name": "Red Hat, Inc. and Crunchy Data Solutions",
            "openshift.io/documentation-url": "https://github.com/cruncycontainers/examples/openshift/pro",
            "template.openshift.io/bindable": "false"
        }
    },
    "message": "We made your PGAdmin4 interface for you",
    "labels": {
        "template": "pgadmin4-crunchydatasolutions",
        "app": "pgadmin4"
    },
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${PGADMIN_SERVICE_NAME}",
                "labels": {
                    "name": "${PGADMIN_SERVICE_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 5050,
                        "targetPort": 5050,
                        "nodePort": 30000
                    }
                ],
                "selector": {
                    "name": "${PGADMIN_SERVICE_NAME}"
                },
                "type": "NodePort",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${PGADMIN_SERVICE_NAME}"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${PGADMIN_SERVICE_NAME}-route"
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${PGADMIN_SERVICE_NAME}"
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${PGADMIN_SERVICE_NAME}",
                "annotations": {
                    "template.alpha.openshift.io/wait-for-ready": "true"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "name": "${PGADMIN_SERVICE_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "${PGADMIN_SERVICE_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${PGADMIN_SERVICE_NAME}",
                                "image": "docker.io/crunchydata/crunchy-pgadmin4:centos7-10.3-1.8.2",
                                "ports": [
                                    {
                                        "containerPort": 5050,
                                        "protocol": "TCP"
                                    }
                                ],
                                "livenessProbe": {
                                    "timeoutSeconds": 1,
                                    "initialDelaySeconds": 30,
                                    "tcpSocket": {
                                        "port": 5050
                                    }
                                },
                                "env": [
                                    {
                                        "name": "PGADMIN_SETUP_EMAIL",
                                        "value": "${PGADMIN_SETUP_EMAIL}"
                                    },
                                    {
                                        "name": "PGADMIN_SETUP_PASSWORD",
                                        "value": "${PGADMIN_SETUP_PASSWORD}"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_LIMIT}"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "mountPath": "/pgadmin",
                                        "name": "${PGADMIN_SERVICE_NAME}",
                                        "readOnly": false
                                    },
                                    {
                                        "mountPath": "/certs",
                                        "name": "certs",
                                        "readOnly": false
                                    },
                                    {
                                        "mountPath": "/run/httpd",
                                        "name": "run",
                                        "readOnly": false
                                    }
                                ],
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "IfNotPresent",
                                "capabilities": {},
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": false
                                }
                            }
                        ],
                        "volumes": [
                            {
                                "name": "pgadmin",
                                "persistentVolumeClaim": {
                                    "claimName": "${PGADMIN_SERVICE_NAME}"
                                }
                            },
                            {
                                "name": "certs",
                                "emptyDir": {
                                    "medium": "Memory"
                                }
                            },
                            {
                                "name": "run",
                                "emptyDir": {
                                    "medium": "Memory"
                                }
                            }
                        ],
                        "restartPolicy": "Always",
                        "dnsPolicy": "ClusterFirst"
                    }
                }
            },
            "status": {}
        }
    ],
    "parameters": [
        {
            "name": "PGADMIN_SERVICE_NAME",
            "displayName": "pgAdmin Service Name",
            "description": "The name of the OpenShift Service exposed for the database.",
            "value": "pgadmin",
            "required": true
        },
        {
            "name": "PGADMIN_SETUP_EMAIL",
            "displayName": "pgAdmin Login Email",
            "description": "Email for pgAdmin4 Login.",
            "value": "admin@admin.com",
            "required": true
        },
        {
            "name": "PGADMIN_SETUP_PASSWORD",
            "displayName": "pgAdmin Login Password",
            "description": "Password for pgAdmin4 Login.",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{16}",
            "required": true
        },
        {
            "name": "VOLUME_CAPACITY",
            "displayName": "Volume Capacity",
            "description": "Volume space available for data, e.g. 512Mi, 2Gi.",
            "value": "1Gi",
            "required": true
        },
        {
            "name": "MEMORY_LIMIT",
            "displayName": "Memory Limit",
            "description": "Maximum amount of memory the container can use.",
            "value": "512Mi",
            "required": true
        }
    ]
}
