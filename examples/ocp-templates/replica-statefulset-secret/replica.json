{
    "kind": "Template",
    "apiVersion": "v1",
    "message": "The following service(s) have been created in your project: ${SERVICE_NAME}.",
    "name": "crunchy-postgres-replica-secrets-template",
    "labels": {
        "template": "crunchy-postgres-replica-secrets-template"
    },
    "metadata": {
        "name": "crunchy-postgres-replica-secrets-template",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL replica template to connect to a primary database using secrets.",
            "iconClass": "icon-postgresql",
            "tags": "database,postgresql",
            "openshift.io/display-name": "Crunchy PostgreSQL Replica Secrets Template",
            "openshift.io/documentation-url": "https://github.com/CrunchyData/crunchy-containers/tree/master/docs",
            "openshift.io/long-description": "Crunchy PostgreSQL replica template to connect to a primary database using secrets.",
            "openshift.io/provider-display-name": "Crunchy Data",
            "openshift.io/support-url": "https://github.com/CrunchyData/crunchy-containers"
        }
    },
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "name": "${SERVICE_NAME}"
                },
                "annotations": {
                    "template.openshift.io/expose-uri": "postgres://{.spec.clusterIP}:{.spec.ports[?(.name==\"postgresql-replica\")].port}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "postgresql-replica",
                        "protocol": "TCP",
                        "port": 5432,
                        "targetPort": 5432,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${SERVICE_NAME}"
                }
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "StatefulSet",
            "apiVersion": "apps/v1beta1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "matchLabels": {
                        "name": "${SERVICE_NAME}"
                    }
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "name": "${SERVICE_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${SERVICE_NAME}",
                                "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/opt/cpm/bin/readiness.sh"
                                        ]
                                    },
                                    "initialDelaySeconds": 20,
                                    "timeoutSeconds": 2
                                },
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "/opt/cpm/bin/liveness.sh"
                                        ]
                                    },
                                    "initialDelaySeconds": 40,
                                    "timeoutSeconds": 2
                                },
                                "imagePullPolicy": "Always",
                                "ports": [
                                    {
                                        "containerPort": 5432,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "PG_USER",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "PG_USER",
                                                "name": "${PG_SECRET_NAME}"
                                            }
                                        }
                                    },
                                    {
                                        "name": "PG_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "PG_PASSWORD",
                                                "name": "${PG_SECRET_NAME}"
                                            }
                                        }
                                    },
                                    {
                                        "name": "PG_PRIMARY_USER",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "PG_PRIMARY_USER",
                                                "name": "${PG_SECRET_NAME}"
                                            }
                                        }
                                    },
                                    {
                                        "name": "PG_PRIMARY_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "PG_PRIMARY_PASSWORD",
                                                "name": "${PG_SECRET_NAME}"
                                            }
                                        }
                                    },
                                    {
                                        "name": "PG_ROOT_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "PG_ROOT_PASSWORD",
                                                "name": "${PG_SECRET_NAME}"
                                            }
                                        }
                                    },
                                    {
                                        "name": "PG_DATABASE",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "PG_DATABASE",
                                                "name": "${PG_SECRET_NAME}"
                                            }
                                        }
                                    },
                                    {
                                        "name": "PG_PRIMARY_PORT",
                                        "value": "${PG_PRIMARY_PORT}"
                                    },
                                    {
                                        "name": "PG_MODE",
                                        "value": "replica"
                                    },
                                    {
                                        "name": "PGHOST",
                                        "value": "/tmp"
                                    },
                                    {
                                        "name": "PG_PRIMARY_HOST",
                                        "value": "${PG_PRIMARY_HOST}"
                                    },
                                    {
                                        "name": "TEMP_BUFFERS",
                                        "value": "${TEMP_BUFFERS}"
                                    },
                                    {
                                        "name": "MAX_CONNECTIONS",
                                        "value": "${MAX_CONNECTIONS}"
                                    },
                                    {
                                        "name": "SHARED_BUFFERS",
                                        "value": "${SHARED_BUFFERS}"
                                    },
                                    {
                                        "name": "MAX_WAL_SENDERS",
                                        "value": "${MAX_WAL_SENDERS}"
                                    },
                                    {
                                        "name": "WORK_MEM",
                                        "value": "${WORK_MEM}"
                                    }
                                ],
                                "resources": {},
                                "terminationMessagePath": "/dev/termination-log",
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": false
                                },
                                "volumeMounts": [
                                    {
                                        "name": "pgdata",
                                        "mountPath": "/pgdata",
                                        "readOnly": false
                                    },
                                    {
                                        "mountPath": "/pgconf",
                                        "name": "pgconf",
                                        "readOnly": true
                                    },
                                    {
                                        "mountPath": "/pgwal",
                                        "name": "pgwal",
                                        "readOnly": false
                                    },
                                    {
                                        "mountPath": "/backup",
                                        "name": "backup",
                                        "readOnly": false
                                    },
                                    {
                                        "mountPath": "/recover",
                                        "name": "recover",
                                        "readOnly": false
                                    },
                                    {
                                        "mountPath": "/backrestrepo",
                                        "name": "backrestrepo",
                                        "readOnly": false
                                    },
                                    {
                                        "mountPath": "/sshd",
                                        "name": "sshd",
                                        "readOnly": false
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "pgconf",
                                "emptyDir": {
                                    "medium": "Memory"
                                }
                            },
                            {
                                "name": "pgwal",
                                "emptyDir": {
                                    "medium": "Memory"
                                }
                            },
                            {
                                "name": "backup",
                                "emptyDir": {
                                    "medium": "Memory"
                                }
                            },
                            {
                                "name": "recover",
                                "emptyDir": {
                                    "medium": "Memory"
                                }
                            },
                            {
                                "name": "backrestrepo",
                                "emptyDir": {
                                    "medium": "Memory"
                                }
                            },
                            {
                                "name": "sshd",
                                "emptyDir": {
                                    "medium": "Memory"
                                }
                            }
                        ],
                        "restartPolicy": "Always",
                        "dnsPolicy": "ClusterFirst"
                    }
                },
                "volumeClaimTemplates": [
                    {
                        "metadata": {
                            "name": "pgdata"
                        },
                        "spec": {
                            "accessModes": [
                                "${VOLUME_ACCESS_MODE}"
                            ],
                            "resources": {
                                "requests": {
                                    "storage": "${VOLUME_CAPACITY}"
                                }
                            }
                        }
                    }
                ]
            },
            "status": {}
        }
    ],
    "parameters": [
        {
            "description": "Volume space available for data, e.g. 512Mi, 2Gi.",
            "displayName": "Volume Capacity",
            "name": "VOLUME_CAPACITY",
            "required": true,
            "value": "1Gi"
        },
        {
            "description": "Volume access mode e.g. ReadWriteOnce, ReadWriteMany.",
            "displayName": "Volume Access Mode",
            "name": "VOLUME_ACCESS_MODE",
            "required": true,
            "value": "ReadWriteOnce"
        },
        {
            "description": "Secret name of the primary to connect to.",
            "displayName": "PG Primary Secret Name",
            "name": "PG_SECRET_NAME",
            "required": true
        },
        {
            "description": "Hostname of the Primary database.",
            "displayName": "PG Primary Hostname",
            "name": "PG_PRIMARY_HOST",
            "required": true
        },
        {
            "name": "PG_PRIMARY_PORT",
            "description": "The postgresql port",
            "value": "5432",
            "required": true
        },
        {
            "displayName": "Container Image Tag",
            "name": "CCP_IMAGE_TAG",
            "value": "centos7-10.4-2.0",
            "description": "Image version to pull",
            "required": true
        },
        {
            "displayName": "Container Image Repository",
            "name": "CCP_IMAGE_PREFIX",
            "value": "crunchydata",
            "description": "Repository prefix to pull the container image from",
            "required": true
        },
        {
            "name": "SERVICE_NAME",
            "description": "The name to use for the service and container",
            "value": "crunchy-postgres-replica",
            "required": true
        },
        {
            "name": "TEMP_BUFFERS",
            "description": "PostgreSQL temp_buffers size",
            "required": false,
            "value": "9MB"
        },
        {
            "name": "MAX_CONNECTIONS",
            "description": "postgres max_connections value",
            "required": false,
            "value": "20"
        },
        {
            "name": "SHARED_BUFFERS",
            "description": "PostgreSQL shared_buffers size",
            "required": true,
            "value": "128MB"
        },
        {
            "name": "MAX_WAL_SENDERS",
            "description": "PostgreSQL max_wal_senders value",
            "required": true,
            "value": "10"
        },
        {
            "name": "WORK_MEM",
            "description": "PostgreSQL work_mem size",
            "required": false,
            "value": "5MB"
        }
    ]
}
