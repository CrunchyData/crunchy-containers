{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-large-config",
        "annotations": {
            "description": "Crunchy large configuration includes primary Deployment, primary Service, replica Service, dynamic storage, a StatefulSet of replicas, unlimited memory and CPU",
            "iconClass": "icon-postgresql",
            "tags": "crunchy,database,postgresql"
        }
    },
    "parameters": [{
        "name": "NAME",
        "description": "The name of the database and service",
        "value": "primary"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use",
        "value": "rhel7-9.6.9-2.0"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "description": "The image prefix to use",
        "value": "crunchydata"
    }, {
        "name": "PG_PRIMARY_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG super user",
        "value": "password"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "STORAGE_CLASS",
        "description": "The name for the storage class",
        "value": "gluster-container"
    }, {
        "name": "PVC_SIZE",
        "description": "The size for the PVC",
        "value": "300M"
    }, {
        "name": "MAX_CONNECTIONS",
        "description": "The postgres max_connections setting",
        "value": "101"
    }, {
        "name": "MAX_WAL_SENDERS",
        "description": "The postgres max_wal_senders setting",
        "value": "7"
    }, {
        "name": "WORK_MEM",
        "description": "The postgres work_mem setting",
        "value": "5MB"

    }],

    "objects": [{
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
              "name": "${NAME}-pvc",
              "annotations": {
                  "volume.beta.kubernetes.io/storage-class": "${STORAGE_CLASS}"
              }
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${PVC_SIZE}"
                    }
                }
            }
        }, {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "labels": {
                    "name": "${NAME}"
                }
            },
            "spec": {
                "ports": [{
                    "protocol": "TCP",
                    "port": 5432,
                    "targetPort": 5432,
                    "nodePort": 0
                }],
                "selector": {
                    "name": "${NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        }, {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-replica",
                "labels": {
                    "name": "${NAME}-replica"
                }
            },
            "spec": {
                "ports": [{
                    "protocol": "TCP",
                    "port": 5432,
                    "targetPort": 5432,
                    "nodePort": 0
                }],
                "selector": {
                    "name": "${NAME}-replica"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        }, {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-pgpool",
                "labels": {
                    "name": "${NAME}-pgpool"
                }
            },
            "spec": {
                "ports": [{
                    "protocol": "TCP",
                    "port": 5432,
                    "targetPort": 5432,
                    "nodePort": 0
                }],
                "selector": {
                    "name": "${NAME}-pgpool"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        }, {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "${NAME}-set",
                "labels": {
                    "app": "${NAME}-set"
                }
            },
            "spec": {
                "ports": [{
                    "port": 5432,
                    "name": "web"
                }],
                "clusterIP": "None",
                "selector": {
                    "app": "${NAME}-set"
                }
            }

        }, {
            "apiVersion": "apps/v1beta1",
            "kind": "StatefulSet",
            "metadata": {
                "name": "${NAME}-set"
            },
            "spec": {
                "serviceName": "${NAME}-set",
                "replicas": 1,
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${NAME}-set",
                            "name": "${NAME}-replica"
                        }
                    },
                    "spec": {
                        "securityContext": {
                            "supplementalGroups": [590]
                        },
                        "containers": [{
                            "name": "server",
                            "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                            "ports": [{
                                "containerPort": 5432,
                                "name": "postgres"
                            }],
                            "env": [{
                                "name": "PG_PRIMARY_USER",
                                "value": "primaryuser"
                            }, {
                                "name": "PG_PRIMARY_HOST",
                                "value": "${NAME}"
                            }, {
                                "name": "PGHOST",
                                "value": "/tmp"
                            }, {
                                "name": "PG_MODE",
                                "value": "replica"
                            }, {
                                "name": "PG_PRIMARY_PASSWORD",
                                "value": "${PG_PRIMARY_PASSWORD}"
                            }, {
                                "name": "PG_USER",
                                "value": "testuser"
                            }, {
                                "name": "PG_PASSWORD",
                                "value": "${PG_PASSWORD}"
                            }, {
                                "name": "PG_DATABASE",
                                "value": "userdb"
                            }, {
                                "name": "PG_ROOT_PASSWORD",
                                "value": "${PG_ROOT_PASSWORD}"
                            }, {
                                "name": "PG_PRIMARY_PORT",
                                "value": "5432"
                            }],
                            "volumeMounts": [{
                                "name": "pgdata",
                                "mountPath": "/pgdata",
                                "readOnly": false
                            }]
                        }]
                    }
                },
                "volumeClaimTemplates": [{
                    "metadata": {
                        "name": "pgdata",
                        "annotations": {
                            "volume.beta.kubernetes.io/storage-class": "${STORAGE_CLASS}"
                        }
                    },
                    "spec": {
                        "accessModes": [
                            "ReadWriteOnce"
                        ],
                        "resources": {
                            "requests": {
                                "storage": "${PVC_SIZE}"
                            }
                        }
                    }
                }]
            }
        },

        {
            "kind": "Deployment",
            "apiVersion": "extensions/v1beta1",
            "metadata": {
                "name": "${NAME}-pgpool",
                "labels": {
                    "name": "${NAME}-pgpool"
                }
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "matchLabels": {
                        "name": "${NAME}-pgpool"
                    }
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "${NAME}-pgpool"
                        }
                    },
                    "spec": {
                        "securityContext": {
                            "supplementalGroups": [590]
                        },
                        "containers": [{
                            "name": "pgpool",
                            "image": "${CCP_IMAGE_PREFIX}/crunchy-pgpool:${CCP_IMAGE_TAG}",
                            "imagePullPolicy": "IfNotPresent",
                            "env": [{
                                "name": "PG_USERNAME",
                                "value": "testuser"
                            }, {
                                "name": "PG_PASSWORD",
                                "value": "${PG_PASSWORD}"
                            }, {
                                "name": "PG_PORT",
                                "value": "5432"
                            }, {
                                "name": "PG_PRIMARY_SERVICE_NAME",
                                "value": "${NAME}"
                            }, {
                                "name": "PG_REPLICA_SERVICE_NAME",
                                "value": "${NAME}-replica"
                            }],
                            "volumeMounts": []
                        }],
                        "volumes": [],
                        "restartPolicy": "Always",
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                },
                "strategy": {
                    "type": "RollingUpdate",
                    "rollingUpdate": {
                        "maxUnavailable": 1,
                        "maxSurge": 1
                    }
                }
            }
        }, {
            "kind": "Deployment",
            "apiVersion": "extensions/v1beta1",
            "metadata": {
                "name": "${NAME}",
                "labels": {
                    "name": "${NAME}"
                }
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "matchLabels": {
                        "name": "${NAME}"
                    }
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "${NAME}"
                        }
                    },
                    "spec": {
                        "securityContext": {
                            "supplementalGroups": [590]
                        },
                        "containers": [{
                            "name": "collect",
                            "image": "${CCP_IMAGE_PREFIX}/crunchy-collect:${CCP_IMAGE_TAG}",
                            "imagePullPolicy": "IfNotPresent",
                            "env": [{
                                "name": "PG_PRIMARY_USER",
                                "value": "primaryuser"
                            }, {
                                "name": "PG_PRIMARY_PASSWORD",
                                "value": "${PG_PRIMARY_PASSWORD}"
                            }, {
                                "name": "PG_PORT",
                                "value": "5432"
                            }, {
                                "name": "PROM_GATEWAY",
                                "value": "http://crunchy-metrics:9091"
                            }, {
                                "name": "PG_ROOT_PASSWORD",
                                "value": "${PG_ROOT_PASSWORD}"
                            }],
                            "volumeMounts": [{
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": true
                            }]
                        }, {
                            "name": "server",
                            "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                            "env": [{
                                "name": "PG_PRIMARY_PORT",
                                "value": "5432"
                            }, {
                                "name": "PG_MODE",
                                "value": "primary"
                            }, {
                                "name": "PGDATA_PATH_OVERRIDE",
                                "value": "${NAME}"
                            }, {
                                "name": "PG_PRIMARY_USER",
                                "value": "primaryuser"
                            }, {
                                "name": "PG_PRIMARY_PASSWORD",
                                "value": "${PG_PRIMARY_PASSWORD}"
                            }, {
                                "name": "PG_USER",
                                "value": "testuser"
                            }, {
                                "name": "PG_PASSWORD",
                                "value": "${PG_PASSWORD}"
                            }, {
                                "name": "PG_DATABASE",
                                "value": "userdb"
                            }, {
                                "name": "PG_ROOT_PASSWORD",
                                "value": "${PG_ROOT_PASSWORD}"
                            }, {
                                "name": "SYNC_REPLICA",
                                "value": ""
                            }, {
                                "name": "MAX_CONNECTIONS",
                                "value": "${MAX_CONNECTIONS}"
                            }, {
                                "name": "MAX_WAL_SENDERS",
                                "value": "${MAX_WAL_SENDERS}"
                            }, {
                                "name": "WORK_MEM",
                                "value": "${WORK_MEM}"
                            }, {
                                "name": "PGHOST",
                                "value": "/tmp"
                            }],
                            "volumeMounts": [{
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            }],

                            "ports": [{
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }],
                            "resources": {},
                            "imagePullPolicy": "IfNotPresent"
                        }],
                        "volumes": [{
                            "name": "pgdata",
                            "persistentVolumeClaim": {
                                "claimName": "${NAME}-pvc"
                            }
                        }],

                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                },
                "strategy": {
                    "type": "RollingUpdate",
                    "rollingUpdate": {
                        "maxUnavailable": 1,
                        "maxSurge": 1
                    }
                }
            }
        }
    ]
}
