{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-small-config",
        "annotations": {
            "description": "Crunchy small configuration includes a single primary with limited CPU and memory, suitable for development purposes.",
            "iconClass": "icon-postgresql",
            "tags": "crunchy,database,postgresql"
        }
    },
    "parameters": [{
        "name": "NAME",
        "description": "The name of the database and service",
        "value": "primary"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use",
        "value": "rhel7-9.6.9-2.0"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "description": "The image prefix to use",
        "value": "crunchydata"
    }, {
        "name": "PG_PRIMARY_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "STORAGE_CLASS",
        "description": "The name for the storage class",
        "value": "gluster-container"
    }, {
        "name": "PVC_SIZE",
        "description": "The size for the PVC",
        "value": "300M"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG administrator",
        "value": "password"
    }],

    "objects": [{
        "kind": "PersistentVolumeClaim",
        "apiVersion": "v1",
        "metadata": {
            "name": "${NAME}-pvc",
            "annotations": {
              "volume.beta.kubernetes.io/storage-class": "${STORAGE_CLASS}"
            }
        },
        "spec": {
            "accessModes": [
                "ReadWriteOnce"
            ],
            "resources": {
                "requests": {
                    "storage": "${PVC_SIZE}"
                }
            }
        }
    }, {
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${NAME}",
            "labels": {
                "name": "${NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${NAME}"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        }
    }, {
        "kind": "Deployment",
        "apiVersion": "extensions/v1beta1",
        "metadata": {
            "name": "${NAME}",
            "labels": {
                "name": "${NAME}"
            }
        },
        "spec": {
            "replicas": 1,
            "selector": {
                "matchLabels": {
                    "name": "${NAME}"
                }
            },
            "template": {
                "metadata": {
                    "labels": {
                        "name": "${NAME}"
                    }
                },
                "spec": {
                    "securityContext": {
                        "supplementalGroups": [590]
                    },
                    "containers": [{
                        "name": "server",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                        "env": [{
                            "name": "PG_PRIMARY_PORT",
                            "value": "5432"
                        }, {
                            "name": "PG_MODE",
                            "value": "primary"
                        }, {
                            "name": "PGDATA_PATH_OVERRIDE",
                            "value": "${NAME}"
                        }, {
                            "name": "PG_PRIMARY_USER",
                            "value": "primaryuser"
                        }, {
                            "name": "PG_PRIMARY_PASSWORD",
                            "value": "${PG_PRIMARY_PASSWORD}"
                        }, {
                            "name": "PG_USER",
                            "value": "testuser"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
                            "name": "PG_DATABASE",
                            "value": "userdb"
                        }, {
                            "name": "PG_ROOT_PASSWORD",
                            "value": "${PG_ROOT_PASSWORD}"
                        }, {
                            "name": "SYNC_REPLICA",
                            "value": ""
                        }, {
                            "name": "PGHOST",
                            "value": "/tmp"
                        }],
                        "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }],

                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "resources": {
                            "requests": {
                                "memory": "1Gi",
                                "cpu": "1"
                            }
                        },
                        "imagePullPolicy": "IfNotPresent"
                    }],
                    "volumes": [{
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "${NAME}-pvc"
                        }
                    }],

                    "restartPolicy": "Always",
                    "terminationGracePeriodSeconds": 30,
                    "dnsPolicy": "ClusterFirst",
                    "securityContext": {}
                }
            },
            "strategy": {
                "type": "RollingUpdate",
                "rollingUpdate": {
                    "maxUnavailable": 1,
                    "maxSurge": 1
                }
            }
        }
    }]
}
