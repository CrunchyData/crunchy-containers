{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-pgweb-app",
        "annotations": {
            "description": "Crunchy sample web app using pgweb.",
            "iconClass": "icon-database",
            "tags": "crunchy,database,postgresql"
        }
    },
    "parameters": [{
        "name": "NAME",
        "description": "The name of the app and service",
        "value": "pgweb"
    }, {
        "name": "DATABASE_NAME",
        "description": "The name of the database to connect to",
        "value": "primary"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${NAME}",
            "labels": {
                "name": "${NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 8081,
                "targetPort": 8081,
                "nodePort": 0
            }],
            "selector": {
                "name": "${NAME}"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${NAME}",
            "labels": {
                "name": "${NAME}"
            }
        },
        "spec": {
            "containers": [{
                "name": "pgweb",
                "image": "sosedoff/pgweb",
                "ports": [{
                    "containerPort": 8081,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "DATABASE_URL",
                    "value": "postgres://testuser:password@${DATABASE_NAME}:5432/userdb?sslmode=disable"
                }],
                "volumeMounts": [ ]
            }],
            "volumes": [ ]
        }
    }]
}
