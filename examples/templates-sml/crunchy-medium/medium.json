{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-medium-config",
        "annotations": {
            "description": "Crunchy medium configuration includes primary Deployment, primary Service, dynamic storage, a single async replica, unlimited memory and CPU",
            "iconClass": "icon-postgresql",
            "tags": "crunchy,database,postgresql"
        }
    },
    "parameters": [{
        "name": "NAME",
        "description": "The name of the database and service",
        "value": "primary"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use",
        "value": "rhel7-9.6.5-1.6.0"
    }, {
        "name": "PG_PRIMARY_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG super user",
        "value": "password"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "STORAGE_CLASS",
        "description": "The name for the storage class",
        "value": "gluster-container"
    }, {
        "name": "PVC_SIZE",
        "description": "The size for the PVC",
        "value": "300M"
    }, {
        "name": "MAX_CONNECTIONS",
        "description": "The postgres max_connections setting",
        "value": "101"
    }, {
        "name": "MAX_WAL_SENDERS",
        "description": "The postgres max_wal_senders setting",
        "value": "7"
    }, {
        "name": "WORK_MEM",
        "description": "The postgres work_mem setting",
        "value": "5MB"

    }],

    "objects": [{
        "kind": "PersistentVolumeClaim",
        "apiVersion": "v1",
        "metadata": {
            "name": "${NAME}-replica-pvc",
            "annotations": {
                "volume.beta.kubernetes.io/storage-class": "${STORAGE_CLASS}"
            }
        },
        "spec": {
            "accessModes": [
                "ReadWriteOnce"
            ],
            "resources": {
                "requests": {
                    "storage": "${PVC_SIZE}"
                }
            }
        }
    }, {
        "kind": "PersistentVolumeClaim",
        "apiVersion": "v1",
        "metadata": {
            "name": "${NAME}-pvc",
            "annotations": {
                "volume.beta.kubernetes.io/storage-class": "${STORAGE_CLASS}"
            }
        },
        "spec": {
            "accessModes": [
                "ReadWriteOnce"
            ],
            "resources": {
                "requests": {
                    "storage": "${PVC_SIZE}"
                }
            }
        }
    }, {
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${NAME}",
            "labels": {
                "name": "${NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${NAME}"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${NAME}-replica",
            "labels": {
                "name": "${NAME}-replica"
            }
        },
        "spec": {
            "securityContext": {
                "supplementalGroups": [590]
            },
            "containers": [{
                "name": "postgres",
                "image": "crunchydata/crunchy-postgres:${CCP_IMAGE_TAG}",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },

                "imagePullPolicy": "IfNotPresent",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_PRIMARY_HOST",
                    "value": "${NAME}"
                }, {
                    "name": "PG_PRIMARY_USER",
                    "value": "primaryuser"
                }, {
                    "name": "PG_PRIMARY_PORT",
                    "value": "5432"
                }, {
                    "name": "PG_MODE",
                    "value": "replica"
                }, {
                    "name": "PG_USER",
                    "value": "testuser"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_DATABASE",
                    "value": "userdb"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "${PG_ROOT_PASSWORD}"
                }, {
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_PRIMARY_PASSWORD",
                    "value": "${PG_PRIMARY_PASSWORD}"
                }],
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }, {
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "persistentVolumeClaim": {
                    "claimName": "${NAME}-replica-pvc"
                }
            }, {
                "name": "backup",
                "emptyDir": {}
            }]
        }
    }, {
        "kind": "Deployment",
        "apiVersion": "extensions/v1beta1",
        "metadata": {
            "name": "${NAME}",
            "labels": {
                "name": "${NAME}"
            }
        },
        "spec": {
            "replicas": 1,
            "selector": {
                "matchLabels": {
                    "name": "${NAME}"
                }
            },
            "template": {
                "metadata": {
                    "labels": {
                        "name": "${NAME}"
                    }
                },
                "spec": {
                    "securityContext": {
                        "supplementalGroups": [590]
                    },
                    "containers": [{
                        "name": "collect",
                        "image": "crunchydata/crunchy-collect:${CCP_IMAGE_TAG}",
                        "env": [{
                            "name": "PG_PRIMARY_USER",
                            "value": "primaryuser"
                        }, {
                            "name": "PG_PRIMARY_PASSWORD",
                            "value": "${PG_PRIMARY_PASSWORD}"
                        }, {
                            "name": "PG_PORT",
                            "value": "5432"
                        }, {
                            "name": "PROM_GATEWAY",
                            "value": "http://crunchy-metrics:9091"
                        }, {
                            "name": "PG_ROOT_PASSWORD",
                            "value": "${PG_ROOT_PASSWORD}"
                        }],
                        "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": true
                        }]
                    }, {
                        "name": "server",
                        "image": "crunchydata/crunchy-postgres:${CCP_IMAGE_TAG}",
                        "env": [{
                            "name": "PG_PRIMARY_PORT",
                            "value": "5432"
                        }, {
                            "name": "PG_MODE",
                            "value": "primary"
                        }, {
                            "name": "PGDATA_PATH_OVERRIDE",
                            "value": "${NAME}"
                        }, {
                            "name": "PG_PRIMARY_USER",
                            "value": "primaryuser"
                        }, {
                            "name": "PG_PRIMARY_PASSWORD",
                            "value": "${PG_PRIMARY_PASSWORD}"
                        }, {
                            "name": "PG_USER",
                            "value": "testuser"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
                            "name": "PG_DATABASE",
                            "value": "userdb"
                        }, {
                            "name": "PG_ROOT_PASSWORD",
                            "value": "${PG_ROOT_PASSWORD}"
                        }, {
                            "name": "MAX_CONNECTIONS",
                            "value": "${MAX_CONNECTIONS}"
                        }, {
                            "name": "MAX_WAL_SENDERS",
                            "value": "${MAX_WAL_SENDERS}"
                        }, {
                            "name": "WORK_MEM",
                            "value": "${WORK_MEM}"
                        }, {
                            "name": "PGHOST",
                            "value": "/tmp"
                        }],
                        "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }],

                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "resources": {},
                        "imagePullPolicy": "IfNotPresent"
                    }],
                    "volumes": [{
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "${NAME}-pvc"
                        }
                    }],

                    "restartPolicy": "Always",
                    "terminationGracePeriodSeconds": 30,
                    "dnsPolicy": "ClusterFirst",
                    "securityContext": {}
                }
            },
            "strategy": {
                "type": "RollingUpdate",
                "rollingUpdate": {
                    "maxUnavailable": 1,
                    "maxSurge": 1
                }
            }
        }
    }]
}
