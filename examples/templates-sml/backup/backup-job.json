{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-backup",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL full database backup of a single database",
            "iconClass": "icon-postgresql",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "JOB_NAME",
        "description": "the name to give the backup job",
        "value": "somebackupjob"
    }, {
        "name": "DB_NAME",
        "description": "the service name of the database to backup",
        "value": "somedatabase"
    }, {
        "name": "STORAGE_CLASS",
        "description": "The name for the storage class",
        "value": "gluster-container"
    }, {
        "name": "PVC_SIZE",
        "value": "500M",
        "description": "the size to give the backup PVC "
    }, {
        "name": "BACKUP_USER",
        "value": "primary",
        "description": "the name of the database user to perform the backup"
    }, {
        "name": "BACKUP_PASS",
        "value": "password",
        "description": "the password of the database user to perform the backup"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "image tag to use",
        "value": "rhel7-9.6-1.5"
    }],

    "objects": [{
        "kind": "PersistentVolumeClaim",
        "apiVersion": "v1",
        "metadata": {
            "name": "${DB_NAME}-backup-pvc",
            "annotations": {
                "volume.beta.kubernetes.io/storage-class": "${STORAGE_CLASS}"
            }
        },
        "spec": {
            "accessModes": [
                "ReadWriteOnce"
            ],
            "resources": {
                "requests": {
                    "storage": "${PVC_SIZE}"
                }
            }
        }
    }, {
        "kind": "Job",
        "apiVersion": "batch/v1",
        "metadata": {
            "name": "${JOB_NAME}"
        },
        "spec": {
            "template": {
                "metadata": {
                    "name": "${JOB_NAME}",
                    "labels": {
                        "app": "${JOB_NAME}"
                    }
                },
                "spec": {
                    "volumes": [{
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "${DB_NAME}-backup-pvc"
                        }
                    }],
                    "securityContext": {
                        "supplementalGroups": [590]
                    },
                    "containers": [{
                        "name": "${JOB_NAME}",
                        "image": "crunchydata/crunchy-backup:${CCP_IMAGE_TAG}",
                        "imagePullPolicy": "IfNotPresent",
                        "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }],
                        "env": [{
                            "name": "BACKUP_HOST",
                            "value": "${DB_NAME}"
                        }, {
                            "name": "BACKUP_USER",
                            "value": "${BACKUP_USER}"
                        }, {
                            "name": "BACKUP_PASS",
                            "value": "${BACKUP_PASS}"
                        }, {
                            "name": "BACKUP_PORT",
                            "value": "5432"
                        }]
                    }],
                    "restartPolicy": "Never"
                }
            }
        }
    }]
}
