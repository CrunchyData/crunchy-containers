{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "watch",
        "labels": {
            "name": "watch"
        }
    },
    "spec": {
        "serviceAccount": "pg-watcher",
        "containers": [{
            "name": "watch",
            "image": "crunchydata/crunchy-watch:$CCP_IMAGE_TAG",
            "env": [{
                "name": "KUBE_PROJECT",
                "value": "default"
            }, {
                "name": "SLEEP_TIME",
                "value": "5"
            }, {
                "name": "MAX_FAILURES",
                "value": "1"
            }, {
                "name": "PG_MASTER_SERVICE",
                "value": "master-dc"
            }, {
                "name": "PG_REPLICA_SERVICE",
                "value": "replica-dc"
            }, {
                "name": "PG_PRIMARY_PORT",
                "value": "5432"
            }, {
                "name": "PG_PRIMARY_USER",
                "value": "master"
            }, {
                "name": "HOME",
                "value": "/tmp"
            }, {
                "name": "PG_DATABASE",
                "value": "postgres"
            }]
        }]
    }
}
