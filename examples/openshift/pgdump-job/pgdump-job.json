{
    "kind": "Job",
    "apiVersion": "batch/v1",
    "metadata": {
        "name": "pgdump-job"
    },
    "spec": {
        "template": {
            "metadata": {
                "name": "pgdump-job",
                "labels": {
                    "app": "pgdump-job"
                }
            },
            "spec": {
                "securityContext": {
                    $CCP_SECURITY_CONTEXT
                },
                "volumes": [{
                    "name": "pgdata",
                    "persistentVolumeClaim": {
                        "claimName": "pgdump-pvc"
                    }
                }],
                "containers": [{
                    "name": "pgdump-job",
                    "image": "$CCP_IMAGE_PREFIX/crunchy-dump:$CCP_IMAGE_TAG",
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }],
                    "env": [{
                        "name": "PGDUMP_HOST",
                        "value": "primary-pvc"
                    }, {
                        "name": "PGDUMP_USER",
                        "value": "postgres"
                    }, {
                        "name": "PGDUMP_PASS",
                        "value": "password"
                    }, {
                        "name": "PGDUMP_PORT",
                        "value": "5432"
                    }, {
                        "name": "PGDUMP_ALL",
                        "value": "true"
                    }, {
                        "name": "PGDUMP_VERBOSE",
                        "value": "true"
                    }]
                }],
                "restartPolicy": "Never"
            }
        }
    }
}
