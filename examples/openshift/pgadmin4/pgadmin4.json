{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgadmin4-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy pgadmin4 Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [ {
        "name": "CCP_IMAGE_PREFIX",
        "description": "image tag prefix to use"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "image tag to use"
    } ],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "pgadmin4",
            "labels": {
                "name": "pgadmin4"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5050,
                "targetPort": 5050,
                "nodePort": 0
            }],
            "selector": {
                "name": "pgadmin4"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "pgadmin4",
            "labels": {
                "name": "pgadmin4"
            }
        },
        "spec": {
            "securityContext": {
                "supplementalGroups": [65534]
            },

            "containers": [{
                "name": "pgadmin4",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-pgadmin4:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5050,
                    "protocol": "TCP"
                }],
                "env": [],
                "securityContext": {
                    "capabilities": {}
                },


                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "rootdata",
                    "readOnly": false
                }]
            }],
            "volumes": [{
                "name": "rootdata",
                "persistentVolumeClaim": {
                    "claimName": "crunchy-pvc"
                }
            }]
        }
    }]
}
