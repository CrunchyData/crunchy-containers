{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pg-replica-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [ {
        "name": "CCP_IMAGE_PREFIX",
        "description": "the image prefix to use"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "the image tag to use"
    } ],
    "objects": [{
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "csprimary",
            "labels": {
                "name": "csprimary"
            }
        },
        "spec": {
  		"securityContext": {
                "supplementalGroups": [65534]
        	},
            "containers": [{
                "name": "postgres",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_PRIMARY_USER",
                    "value": "primaryuser"
                }, {
                    "name": "PG_PRIMARY_PORT",
                    "value": "5432"
                }, {
                    "name": "PG_MODE",
                    "value": "primary"
                }, {
                    "name": "PG_PRIMARY_PASSWORD",
                    "value": "password"
                }, {
                    "name": "SYNC_REPLICA",
                    "value": "cssyncreplica"
                }, {
                    "name": "PG_USER",
                    "value": "testuser"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_DATABASE",
                    "value": "userdb"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "password"
                }],
                "volumeMounts": [ {
                    "mountPath": "/pgconf",
                    "name": "pgconf",
                    "readOnly": true
                }, {
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }, {
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }]
            }],
            "volumes": [{
                "name": "pgconf",
                "persistentVolumeClaim": {
                    "claimName": "custom-config-sync-pgconf-pvc"
                }
            }, {
                "name": "pgdata",
                "persistentVolumeClaim": {
                    "claimName": "custom-config-sync-pvc"
                }
            }, {
                "name": "backup",
                "emptyDir": {}
            }]
        }
    }]
}
