{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pg-replica-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "the image tag to use"
    }, {
        "name": "NAMESPACE",
        "description": "the project namespace to use"
    }],
    "objects": [{
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "watch",
            "labels": {
                "name": "watch"
            }
        },
        "spec": {
            "serviceAccount": "pg-watcher",
            "containers": [{
                "name": "watch",
                "image": "crunchydata/crunchy-watch:${CCP_IMAGE_TAG}",
                "env": [{
                    "name": "OSE_PROJECT",
                    "value": "${NAMESPACE}"
                }, {
                    "name": "SLEEP_TIME",
                    "value": "20"
                }, {
                    "name": "PG_PRIMARY_SERVICE",
                    "value": "ms-primary"
                }, {
                    "name": "PG_REPLICA_SERVICE",
                    "value": "ms-replica"
                }, {
                    "name": "REPLICA_TO_TRIGGER_LABEL",
                    "value": "ms-replica"
                }, {
                    "name": "PG_PRIMARY_PORT",
                    "value": "5432"
                }, {
                    "name": "PG_PRIMARY_USER",
                    "value": "primaryuser"
                }, {
                    "name": "PG_DATABASE",
                    "value": "postgres"
                }]
            }]
        }
    }]
}
