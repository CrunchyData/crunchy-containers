{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-grafana-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Scope Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "crunchy-metrics",
            "labels": {
                "name": "crunchy-metrics"
            }
        },
        "spec": {
            "ports": [{
                "name": "grafana",
                "protocol": "TCP",
                "port": 3000,
                "targetPort": 3000,
                "nodePort": 0
            }, {
                "name": "prometheus",
                "protocol": "TCP",
                "port": 9090,
                "targetPort": 9090,
                "nodePort": 0
            }, {
                "name": "promgateway",
                "protocol": "TCP",
                "port": 9091,
                "targetPort": 9091,
                "nodePort": 0
            }],
            "selector": {
                "name": "crunchy-metrics"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "crunchy-metrics",
            "labels": {
                "name": "crunchy-metrics"
            }
        },
        "spec": {

            "securityContext": {
                "supplementalGroups": [65534]
            },

            "containers": [{
                "name": "crunchy-prometheus",
                "image": "crunchydata/crunchy-prometheus:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 9090,
                    "protocol": "TCP"
                }],
                "env": [],
                "volumeMounts": [{
                    "mountPath": "/data",
                    "name": "prometheusdata",
                    "readOnly": false
                }]
            }, {
                "name": "crunchy-promgateway",
                "image": "crunchydata/crunchy-promgateway:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 9091,
                    "protocol": "TCP"
                }],
                "env": [],
                "volumeMounts": []
            }, {
                "name": "crunchy-grafana",
                "image": "crunchydata/crunchy-grafana:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 3000,
                    "protocol": "TCP"
                }],
                "env": [],
                "securityContext": {
                    "capabilities": {}
                },
                "volumeMounts": [{
                    "mountPath": "/data",
                    "name": "grafanadata",
                    "readOnly": false
                }]
            }],
            "volumes": [{
                "name": "prometheusdata",
                "persistentVolumeClaim": {
                    "claimName": "crunchy-pvc"
                }

            }, {
                "name": "grafanadata",
                "persistentVolumeClaim": {
                    "claimName": "crunchy-pvc2"
                }

            }]
        }
    }]
}
