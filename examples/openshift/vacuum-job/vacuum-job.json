{
    "apiVersion": "extensions/v1beta1",
    "kind": "Job",
    "metadata": {
        "name": "vacuum-job"
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "app": "vacuum-job"
            }
        },
        "template": {
            "metadata": {
                "name": "vacuum-job",
                "labels": {
                    "app": "vacuum-job"
                }
            },
            "spec": {
                "volumes": [],
                "containers": [{
                    "name": "vacuum-job",
                    "image": "crunchydata/crunchy-vacuum:1.2.1",
                    "volumeMounts": [],
                    "env": [{
                        "name": "VAC_FULL",
                        "value": "true"
                    }, {
                        "name": "VAC_TABLE",
                        "value": "testtable"
                    }, {
                        "name": "JOB_HOST",
                        "value": "single-master"
                    }, {
                        "name": "PG_USER",
                        "value": "testuser"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    }, {
                        "name": "PG_PORT",
                        "value": "5432"
                    }]
                }],
                "restartPolicy": "Never"
            }
        }
    }
}
