{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-proxy-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "crunchy-proxy example",
            "iconClass": "icon-database",
            "tags": "crunchy,database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PROXY_IMAGE_TAG",
        "description": "The image tag to use"
    }, {
        "name": "PROXY_SERVICE_NAME",
        "description": "The name of the crunchy-proxy service",
        "value": "crunchy-proxy"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PROXY_SERVICE_NAME}",
            "labels": {
                "name": "${PROXY_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PROXY_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PROXY_SERVICE_NAME}"
        },
        "spec": {
            "strategy": {
                "type": "Recreate",
                "resources": {}
            },
            "triggers": [{
                "type": "ConfigChange"
            }],
            "replicas": 1,
            "selector": {
                "name": "${PROXY_SERVICE_NAME}"
            },
            "template": {
                "metadata": {
                    "creationTimestamp": null,
                    "labels": {
                        "name": "${PROXY_SERVICE_NAME}"
                    }
                },
                "spec": {
                    "containers": [{
                        "name": "proxy",
                        "image": "crunchydata/crunchy-proxy:${PROXY_IMAGE_TAG}",
                        "ports": [{
                            "name": "proxy",
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }, {
                            "name": "admin",
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "env": [{
                            "name": "PG_PRIMARY_SERVICE_NAME",
                            "value": "ms-master"
                        }, {
                            "name": "PG_REPLICA_SERVICE_NAME",
                            "value": "ms-replica"
                        }, {
                            "name": "DEBUG",
                            "value": "true"
                        }],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "securityContext": {
                            "privileged": false
                        },
                        "volumeMounts": [{
                            "mountPath": "/config",
                            "name": "config",
                            "readOnly": true
                        }]

                    }],

                    "volumes": [{
                        "name": "config",
                        "persistentVolumeClaim": {
                            "claimName": "crunchy-pvc"
                        }
                    }],
                    "restartPolicy": "Always",
                    "dnsPolicy": "ClusterFirst"
                }
            }
        },
        "status": {}
    }]
}
