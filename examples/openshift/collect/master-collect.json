{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-pg-collect-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL collect Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PG_MASTER_USER",
        "description": "The username used for master-replica replication",
        "value": "master"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use"
    }, {
        "name": "PG_MASTER_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG adminitrator",
        "value": "password"
    }],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "master-collect",
            "labels": {
                "name": "master-collect"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "master-collect"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "master-collect",
            "labels": {
                "name": "master-collect"
            }
        },
        "spec": {

            "securityContext": {
            },
            "containers": [{
                "name": "collect",
                "image": "crunchydata/crunchy-collect:${CCP_IMAGE_TAG}",
                "env": [{
                    "name": "PG_MASTER_USER",
                    "value": "${PG_MASTER_USER}"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "${PG_MASTER_PASSWORD}"
                }, {
                    "name": "PG_PORT",
                    "value": "5432"
                }, {
                    "name": "PROM_GATEWAY",
                    "value": "http://crunchy-metrics:9091"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "${PG_ROOT_PASSWORD}"
                }],
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": true
                }]
            }, {
                "name": "server",
                "image": "crunchydata/crunchy-postgres:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MASTER_USER",
                    "value": "${PG_MASTER_USER}"
                }, {
                    "name": "PG_MODE",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "${PG_MASTER_PASSWORD}"
                }, {
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "${PG_PASSWORD}"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "${PG_ROOT_PASSWORD}"
                }],
                "securityContext": {
                    "capabilities": {}
                },

                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "emptyDir": {}
            }]
        }
    }]
}
