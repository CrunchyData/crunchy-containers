{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-pg-dba-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL dba Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to pull with"
    }, {
        "name": "NAMESPACE",
        "description": "The project namespace to use"
    }, {
        "name": "PG_MASTER_USER",
        "description": "The username used for master-replica replication",
        "value": "master"
    }, {
        "name": "PG_MASTER_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "postgres"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG adminitrator",
        "value": "password"
    }],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "master-dba",
            "labels": {
                "name": "master-dba"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "master-dba"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "master-dba",
            "labels": {
                "name": "master-dba"
            }
        },
        "spec": {
            "serviceAccount": "dba-sa",
            "containers": [{
                "name": "dba",
                "image": "crunchydata/crunchy-dba:${CCP_IMAGE_TAG}",
                "env": [{
                    "name": "CCP_IMAGE_TAG",
                    "value": "${CCP_IMAGE_TAG}"
                }, {
                    "name": "HOME",
                    "value": "/tmp"
                }, {
                    "name": "OSE_PROJECT",
                    "value": "${NAMESPACE}"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_MASTER_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "${PG_MASTER_PASSWORD}"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PG_PORT",
                    "value": "5432"
                }, {
                    "name": "VAC_SCHEDULE",
                    "value": "0 0,5,10,15,20,25,30,35,40,45,50,55 * * * *"
                }, {
                    "name": "VAC_ANALYZE",
                    "value": "true"
                }, {
                    "name": "VAC_TABLE",
                    "value": "mastertable"
                }, {
                    "name": "JOB_HOST",
                    "value": "master-dba"
                }]
            }, {
                "name": "server",
                "image": "crunchydata/crunchy-postgres:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MASTER_USER",
                    "value": "${PG_MASTER_USER}"
                }, {
                    "name": "PG_MODE",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "${PG_MASTER_PASSWORD}"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "${PG_PASSWORD}"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "${PG_ROOT_PASSWORD}"
                }],
                "securityContext": {
                    "capabilities": {}
                },
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "emptyDir": {}
            }]
        }
    }]
}
