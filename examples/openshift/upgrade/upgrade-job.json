{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "upgrade-job"
    },
    "spec": {
        "template": {
            "metadata": {
                "name": "upgrade-job",
                "labels": {
                    "app": "upgrade-job"
                }
            },
            "spec": {
                "volumes": [
{
                    "name": "pgolddata",
                    "persistentVolumeClaim": {
                        "claimName": "crunchy-pvc"
                    }
                },
{
                    "name": "pgnewdata",
                    "persistentVolumeClaim": {
                        "claimName": "crunchy-pvc2"
                    }
                }
],
                "securityContext": {
                },
                "containers": [{
                    "name": "upgrade-job",
                    "image": "$CCP_IMAGE_PREFIX/crunchy-upgrade:$CCP_IMAGE_TAG",
                    "volumeMounts": [
{
                        "mountPath": "/pgolddata",
                        "name": "pgolddata",
                        "readOnly": false
                    },
{
                        "mountPath": "/pgnewdata",
                        "name": "pgnewdata",
                        "readOnly": false
                    }
],
                    "env": [{
                        "name": "OLD_DATABASE_NAME",
                        "value": "primary-pvc"
                    }, {
                        "name": "NEW_DATABASE_NAME",
                        "value": "primary-upgrade"
                    }, {
                        "name": "OLD_VERSION",
                        "value": "9.6"
                    }, {
                        "name": "NEW_VERSION",
                        "value": "10"
                    }
                    ]
                }],
                "restartPolicy": "Never"
            }
        }
    }
}
