{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "replica",
        "creationTimestamp": null,
        "annotations": {
            "description": "PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "the image tag to use"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "description": "the image prefix to use"
    }],
    "objects": [{
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
            "name": "replica-dc",
            "creationTimestamp": null
        },
        "spec": {
            "strategy": {
                "type": "Recreate",
                "resources": {}
            },
            "triggers": [{
                "type": "ConfigChange"
            }],
            "replicas": 1,
            "selector": {
                "name": "replica"
            },
            "template": {
                "metadata": {
                    "creationTimestamp": null,
                    "labels": {
                        "name": "replica"
                    }
                },
                "spec": {
                    "containers": [{
                        "name": "pg",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres-gis:${CCP_IMAGE_TAG}",
                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "env": [{
                            "name": "PG_PRIMARY_HOST",
                            "value": "primary"
                        }, {
                            "name": "PG_PRIMARY_SERVICE_NAME",
                            "value": "primary"
                        }, {
                            "name": "PG_PRIMARY_PORT",
                            "value": "5432"
                        }, {
                            "name": "PGHOST",
                            "value": "/tmp"
                        }, {
                            "name": "PG_MODE",
                            "value": "replica"
                        }, {
                            "name": "PG_PRIMARY_USER",
                            "value": "primaryuser"
                        }, {
                            "name": "PG_PRIMARY_PASSWORD",
                            "value": "password"
                        }, {
                            "name": "PG_USER",
                            "value": "testuser"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": "password"
                        }, {
                            "name": "PG_ROOT_PASSWORD",
                            "value": "password"
                        }, {
                            "name": "PG_DATABASE",
                            "value": "userdb"
                        }],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "securityContext": {
                            "privileged": false
                        },
                        "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }]

                    }],
                    "volumes": [{
                        "name": "pgdata",
                        "emptyDir": {}
                    }],

                    "restartPolicy": "Always",
                    "dnsPolicy": "ClusterFirst"
                }
            }
        }
    },{
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "replica",
                "labels": {
                    "name": "replica"
                }
            },
            "spec": {
                "ports": [{
                    "protocol": "TCP",
                    "port": 5432,
                    "targetPort": 5432,
                    "nodePort": 0
                }],
                "selector": {
                    "name": "replica"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
    }
  ]
}
