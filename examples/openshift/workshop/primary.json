{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "primary",
        "creationTimestamp": null,
        "annotations": {
            "description": "PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "the image tag to use"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "description": "the image prefix to use"
    }],
    "objects": [{
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
          "name": "primary",
          "labels": {
              "name": "primary"
          }
      },
      "spec": {
          "ports": [
      {
              "name": "postgres",
              "protocol": "TCP",
              "port": 5432,
              "targetPort": 5432,
              "nodePort": 0
          },
      {
              "name": "pgbadger",
              "protocol": "TCP",
              "port": 10000,
              "targetPort": 10000,
              "nodePort": 0
          }
    ],
          "selector": {
              "name": "primary"
          },
          "type": "ClusterIP",
          "sessionAffinity": "None"
      }
    },
      {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "primary",
            "labels": {
                "name": "primary"
            }
        },
        "spec": {
            "securityContext": {
            },
            "containers": [{
                "name": "pgbadger",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-pgbadger:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 10000,
                    "protocol": "TCP"
                }],
                "env": [],
                "securityContext": {
                    "capabilities": {}
                },
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": true
                }]
            }, {
                "name": "pgcollect",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-collect:${CCP_IMAGE_TAG}",
                "env": [{
                    "name": "PG_PRIMARY_USER",
                    "value": "primaryuser"
                }, {
                    "name": "PG_PRIMARY_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_PORT",
                    "value": "5432"
                }, {
                    "name": "PG_PRIMARY_PORT",
                    "value": "5432"
                }, {
                    "name": "PROM_GATEWAY",
                    "value": "http://crunchy-promgateway:9091"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "password"
                }],
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": true
                }]
            }, {
                "name": "pg",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres-gis:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_PRIMARY_USER",
                    "value": "primaryuser"
                }, {
                    "name": "PG_MODE",
                    "value": "primary"
                }, {
                    "name": "PG_PRIMARY_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_PRIMARY_PORT",
                    "value": "5432"
                }, {
                    "name": "PG_USER",
                    "value": "testuser"
                }, {
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_DATABASE",
                    "value": "userdb"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "password"
                }],
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }, {
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "emptyDir": {}
            }, {
                "name": "backup",
                "emptyDir": {}
            }]
        }
    }]
}
