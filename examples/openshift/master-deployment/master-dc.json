{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-master-deployment-example",
        "annotations": {
            "description": "master and replica deployments",
            "iconClass": "icon-database",
            "tags": "crunchy,database,postgresql"
        }
    },
    "parameters": [{
        "name": "PG_MASTER_PORT",
        "description": "The postgresql port",
        "value": "5432"
    }, {
        "name": "PG_MASTER_USER",
        "description": "The username used for master-replica replication",
        "value": "master"
    }, {
        "name": "PGDATA_PATH_OVERRIDE",
        "description": "override for the pgdata path",
        "value": "master-dc"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use"
    }, {
        "name": "PG_MASTER_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG adminitrator",
        "value": "password"
    }],

    "objects": [{
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "master-dc",
                "labels": {
                    "name": "master-dc"
                }
            },
            "spec": {
                "ports": [{
                    "protocol": "TCP",
                    "port": 5432,
                    "targetPort": 5432,
                    "nodePort": 0
                }],
                "selector": {
                    "name": "master-dc"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        }, {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "replica-dc",
                "labels": {
                    "name": "replica-dc"
                }
            },
            "spec": {
                "ports": [{
                    "protocol": "TCP",
                    "port": 5432,
                    "targetPort": 5432,
                    "nodePort": 0
                }],
                "selector": {
                    "name": "replica-dc"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        }, {
            "kind": "Deployment",
            "apiVersion": "extensions/v1beta1",
            "metadata": {
                "name": "replica-dc",
                "labels": {
                    "name": "replica-dc"
                }
            },
            "spec": {
                "replicas": 2,
                "selector": {
                    "matchLabels": {
                        "name": "replica-dc"
                    }
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "replica-dc"
                        }
                    },
                    "spec": {
                        "containers": [{
                            "name": "replica-dc",
                            "image": "crunchydata/crunchy-postgres:${CCP_IMAGE_TAG}",
                            "env": [{
                                "name": "PG_MASTER_PORT",
                                "value": "${PG_MASTER_PORT}"
                            }, {
                                "name": "PG_MASTER_HOST",
                                "value": "${PG_MASTER_HOST}"
                            }, {
                                "name": "PG_MODE",
                                "value": "slave"
                            }, {
                                "name": "PG_MASTER_USER",
                                "value": "${PG_MASTER_USER}"
                            }, {
                                "name": "PG_MASTER_PASSWORD",
                                "value": "${PG_MASTER_PASSWORD}"
                            }, {
                                "name": "PG_USER",
                                "value": "${PG_USER}"
                            }, {
                                "name": "PG_PASSWORD",
                                "value": "${PG_PASSWORD}"
                            }, {
                                "name": "PG_DATABASE",
                                "value": "${PG_DATABASE}"
                            }, {
                                "name": "PG_ROOT_PASSWORD",
                                "value": "${PG_ROOT_PASSWORD}"
                            }, {
                                "name": "PGHOST",
                                "value": "/tmp"
                            }],
                            "volumeMounts": [{
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            }],

                            "ports": [{
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }],
                            "resources": {},
                            "imagePullPolicy": "IfNotPresent"
                        }],
                        "volumes": [{
                            "name": "pgdata",
                            "persistentVolumeClaim": {
                                "claimName": "crunchy-pvc"
                            }
                        }],

                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                },
                "strategy": {
                    "type": "RollingUpdate",
                    "rollingUpdate": {
                        "maxUnavailable": 1,
                        "maxSurge": 1
                    }
                }
            }
        }, {
            "kind": "Deployment",
            "apiVersion": "extensions/v1beta1",
            "metadata": {
                "name": "master-dc",
                "labels": {
                    "name": "master-dc"
                }
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "matchLabels": {
                        "name": "master-dc"
                    }
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "master-dc"
                        }
                    },
                    "spec": {
                        "containers": [{
                            "name": "master-dc",
                            "image": "crunchydata/crunchy-postgres:${CCP_IMAGE_TAG}",
                            "env": [{
                                "name": "PG_MASTER_PORT",
                                "value": "${PG_MASTER_PORT}"
                            }, {
                                "name": "PG_MODE",
                                "value": "master"
                            }, {
                                "name": "PGDATA_PATH_OVERRIDE",
                                "value": "${PGDATA_PATH_OVERRIDE}"
                            }, {
                                "name": "PG_MASTER_USER",
                                "value": "${PG_MASTER_USER}"
                            }, {
                                "name": "PG_MASTER_PASSWORD",
                                "value": "${PG_MASTER_PASSWORD}"
                            }, {
                                "name": "PG_USER",
                                "value": "${PG_USER}"
                            }, {
                                "name": "PG_PASSWORD",
                                "value": "${PG_PASSWORD}"
                            }, {
                                "name": "PG_DATABASE",
                                "value": "${PG_DATABASE}"
                            }, {
                                "name": "PG_ROOT_PASSWORD",
                                "value": "${PG_ROOT_PASSWORD}"
                            }, {
                                "name": "PGHOST",
                                "value": "/tmp"
                            }],
                            "volumeMounts": [{
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            }],

                            "ports": [{
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }],
                            "resources": {},
                            "imagePullPolicy": "IfNotPresent"
                        }],
                        "volumes": [{
                            "name": "pgdata",
                            "persistentVolumeClaim": {
                                "claimName": "crunchy-pvc"
                            }
                        }],

                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                },
                "strategy": {
                    "type": "RollingUpdate",
                    "rollingUpdate": {
                        "maxUnavailable": 1,
                        "maxSurge": 1
                    }
                }
            }
        }
    ]
}
