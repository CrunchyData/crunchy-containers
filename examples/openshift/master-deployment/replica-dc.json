{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-master-deployment-example-replica",
        "annotations": {
            "description": "master and replica deployments",
            "iconClass": "icon-database",
            "tags": "crunchy,database,postgresql"
        }
    },
    "parameters": [{
        "name": "PG_MASTER_PORT",
        "description": "The postgresql port",
        "value": "5432"
    }, {
        "name": "PG_MASTER_USER",
        "description": "The username used for master-slave replication",
        "value": "master"
    }, {
        "name": "PGDATA_PATH_OVERRIDE",
        "description": "override for the pgdata path",
        "value": "replica-dc"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use"
    }, {
        "name": "PG_MASTER_PASSWORD",
        "description": "The password for the PG master user",
        "value": ""
    }, {
        "name": "PG_MASTER_HOST",
        "description": "The master host ",
        "value": "master-dc"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG master user",
        "value": ""
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG adminitrator",
        "value": ""
    }],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "replica-dc"
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "servicename": "replica-dc"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        }
    }, {
        "kind": "Deployment",
        "apiVersion": "extensions/v1beta1",
        "metadata": {
            "name": "replica-dc",
            "labels": {
                "name": "replica-dc",
		"servicename": "replica-dc"
            }
        },
        "spec": {
            "replicas": 1,
            "template": {
                "metadata": {
                    "labels": {
                        "name": "replica-dc",
                        "servicename": "replica-dc"
                    }
                },
                "spec": {
                    "containers": [{
                        "name": "database",
                        "image": "crunchydata/crunchy-postgres:${CCP_IMAGE_TAG}",
                        "env": [{
                            "name": "PG_MASTER_PORT",
                            "value": "${PG_MASTER_PORT}"
                        }, {
                            "name": "PG_MASTER_HOST",
                            "value": "${PG_MASTER_HOST}"
                        }, {
                            "name": "PGDATA_PATH_OVERRIDE",
                            "value": "${PGDATA_PATH_OVERRIDE}"
                        }, {
                            "name": "PG_MODE",
                            "value": "slave"
                        }, {
                            "name": "PG_MASTER_USER",
                            "value": "${PG_MASTER_USER}"
                        }, {
                            "name": "PG_MASTER_PASSWORD",
                            "value": ""
                        }, {
                            "name": "PG_USER",
                            "value": "${PG_USER}"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": ""
                        }, {
                            "name": "PG_DATABASE",
                            "value": "${PG_DATABASE}"
                        }, {
                            "name": "PG_ROOT_PASSWORD",
                            "value": ""
                        }, {
                            "name": "PGHOST",
                            "value": "/tmp"
                        }],
                        "volumeMounts": [{
                            "mountPath": "/pgbackrest",
                            "name": "pgbackrest",
                            "readOnly": false
                        }, {
                            "mountPath": "/pgwal",
                            "name": "pgwal",
                            "readOnly": false
                        }, {
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }, {
                            "mountPath": "/pguser",
                            "name": "pguser-volume"
                        }, {
                            "mountPath": "/pgmaster",
                            "name": "pgmaster-volume"
                        }, {
                            "mountPath": "/pgroot",
                            "name": "pgroot-volume"
                        }, {
                            "mountPath": "/pgconf",
                            "name": "postgresql-conf"
                        }],

                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "resources": {},
                        "imagePullPolicy": "IfNotPresent"
                    }],
                    "volumes": [

                        {
                            "name": "pgwal",
                            "persistentVolumeClaim": {
                                "claimName": "crunchy-pvc3"
                            }
                        }, {
                            "name": "pgbackrest",
                            "persistentVolumeClaim": {
                                "claimName": "crunchy-pvc2"
                            }
                        }, {
                            "name": "pgdata",
                            "persistentVolumeClaim": {
                                "claimName": "crunchy-pvc"
                            }
                        }, {
                            "name": "pguser-volume",
                            "secret": {
                                "secretName": "pguser-secret"
                            }
                        }, {
                            "name": "pgmaster-volume",
                            "secret": {
                                "secretName": "pgmaster-secret"
                            }
                        }, {
                            "name": "pgroot-volume",
                            "secret": {
                                "secretName": "pgroot-secret"
                            }
                        }, {
                            "name": "postgresql-conf",
                            "configMap": {
                                "name": "postgresql-conf",
                                "items": [{
                                    "key": "setup.sql",
                                    "path": "setup.sql"
                                }, {
                                    "key": "postgresql.conf",
                                    "path": "postgresql.conf"
                                }, {
                                    "key": "pghba",
                                    "path": "pg_hba.conf"
                                }]
                            }
                        }
                    ],

                    "restartPolicy": "Always",
                    "terminationGracePeriodSeconds": 30,
                    "dnsPolicy": "ClusterFirst",
                    "securityContext": {}
                }
            },
            "strategy": {
                "type": "RollingUpdate",
                "rollingUpdate": {
                    "maxUnavailable": 1,
                    "maxSurge": 1
                }
            }
        }
    }]
}
