{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "primary-pitr-restore-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PG_PRIMARY_USER",
        "description": "The username used for primary / replica replication",
        "value": "primaryuser"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "description": "The image tag to use"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use"
    }, {
        "name": "PG_PRIMARY_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG administrator",
        "value": "password"
    }],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "primary-pitr-restore",
            "labels": {
                "name": "primary-pitr-restore"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "primary-pitr-restore"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "primary-pitr-restore",
            "labels": {
                "name": "primary-pitr-restore"
            }
        },
        "spec": {
            "securityContext": {
                "supplementalGroups": [65534]
            },

            "volumes": [{
                "name": "pgdata",
                "persistentVolumeClaim": {
                    "claimName": "crunchy-pvc"
                }
            }, {
                "name": "pgwal",
                "emptyDir": {}
            }, {
                "name": "recover",
                "persistentVolumeClaim": {
                    "claimName": "recover-pvc"
                }
            }, {
                "name": "backup",
                "persistentVolumeClaim": {
                    "claimName": "crunchy-pvc3"
                }
            }],
            "containers": [{
                "name": "postgres",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_PRIMARY_USER",
                    "value": "${PG_PRIMARY_USER}"
                }, {
                    "name": "PG_MODE",
                    "value": "primary"
                }, {
                    "name": "PG_PRIMARY_PORT",
                    "value": "5432"
                }, {
                    "name": "PG_PRIMARY_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "password"
                }, {
                    "name": "BACKUP_PATH",
                    "value": "primary-pitr-backups/2017-10-12-19-28-14"
                }, {
                    "name": "RECOVERY_TARGET_NAME",
                    "value": "beforechanges"
                }, {
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "password"
                }],
                "securityContext": {
                    "capabilities": {}
                },
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }, {
                    "mountPath": "/pgwal",
                    "name": "pgwal",
                    "readOnly": false
                }, {
                    "mountPath": "/recover",
                    "name": "recover",
                    "readOnly": true
                }, {
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }]
            }]
        }
    }]
}
