{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "backup-pitr-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Primary Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [ {
        "name": "CCP_IMAGE_PREFIX",
        "description": "image prefix to use"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "image tag to use"
    } ],

    "objects": [{
        "kind": "Job",
        "apiVersion": "batch/v1",
        "metadata": {
            "name": "backup-primary-pitr-pvc"
        },
        "spec": {
            "template": {
                "metadata": {
                    "name": "backup-primary-pitr-pvc",
                    "labels": {
                        "app": "backup-primary-pitr-pvc"
                    }
                },
                "spec": {
                    "securityContext": {
                        "supplementalGroups": [65534]
                    },

                    "volumes": [{
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "crunchy-pvc"
                        }
                    }],
                    "containers": [{
                        "name": "backup-primary-pitr-pvc",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-backup:${CCP_IMAGE_TAG}",
                        "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }],
                        "env": [{
                            "name": "BACKUP_HOST",
                            "value": "primary-pitr"
                        }, {
                            "name": "BACKUP_LABEL",
                            "value": "somebackup"
                        }, {
                            "name": "BACKUP_USER",
                            "value": "primaryuser"
                        }, {
                            "name": "BACKUP_PASS",
                            "value": "password"
                        }, {
                            "name": "BACKUP_PORT",
                            "value": "5432"
                        }]
                    }],
                    "restartPolicy": "Never"
                }
            }
        }
    }]
}
