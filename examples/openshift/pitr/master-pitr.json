{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pitr-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Master Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PG_MASTER_USER",
        "description": "The username used for master-slave replication",
        "value": "master"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "image tag to use"
    }, {
        "name": "PG_MASTER_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG adminitrator",
        "value": "password"
    }],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "master-pitr",
            "labels": {
                "name": "master-pitr"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "master-pitr"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "master-pitr",
            "labels": {
                "name": "master-pitr"
            }
        },
        "spec": {
            "securityContext": {
                "supplementalGroups": [65534]
            },

            "containers": [{
                "name": "master-pitr",
                "image": "crunchydata/crunchy-postgres:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_MASTER_USER",
                    "value": "${PG_MASTER_USER}"
                }, {
                    "name": "PG_MODE",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "password"
                }, {
                    "name": "ARCHIVE_MODE",
                    "value": "on"
                }, {
                    "name": "ARCHIVE_TIMEOUT",
                    "value": "60"
                }],
                "securityContext": {
                    "capabilities": {}
                },


                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }, {
                    "mountPath": "/pgwal",
                    "name": "pgwal",
                    "readOnly": false
                }, {
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "persistentVolumeClaim": {
                    "claimName": "crunchy-pvc"
                }
            }, {
                "name": "pgwal",
                "persistentVolumeClaim": {
                    "claimName": "crunchy-pvc2"
                }
            }, {
                "name": "backup",
                "emptyDir": {}
            }]
        }
    }]
}
