{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgpool",
        "creationTimestamp": null,
        "annotations": {
            "description": "PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_PREFIX",
        "description": "The image prefix to use"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use"
    }, {
        "name": "PG_USERNAME",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG primary user",
        "value": "password"
    }, {
        "name": "PGPOOL_SERVICE_NAME",
        "description": "The name of the pgpool Service",
        "value": "pgpool"
    }, {
        "name": "PG_PRIMARY_SERVICE_NAME",
        "description": "The primary configured in pgpool",
        "value": "pr-primary"
    }, {
        "name": "PG_REPLICA_SERVICE_NAME",
        "description": "The replica configured in pgpool",
        "value": "pr-replica"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PGPOOL_SERVICE_NAME}",
            "labels": {
                "name": "${PGPOOL_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PGPOOL_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "pgpool",
            "labels": {
                "name": "pgpool"
            }
        },
        "spec": {
            "containers": [{
                "name": "pgpool",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-pgpool:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_USERNAME",
                    "value": "${PG_USERNAME}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "${PG_PASSWORD}"
                }, {
                    "name": "PG_PRIMARY_SERVICE_NAME",
                    "value": "${PG_PRIMARY_SERVICE_NAME}"
                }, {
                    "name": "PG_REPLICA_SERVICE_NAME",
                    "value": "${PG_REPLICA_SERVICE_NAME}"
                }],
                "volumeMounts": [{
                        "name": "pgpool-conf",
                        "mountPath": "/pgconf/pgpoolconfigdir",
    		    "readOnly": false
                    }
    	    ]
            }],
            "volumes": [{
                "name": "pgpool-conf",
                "configMap": {
                    "name": "pgpool-conf",
                    "items": [{
                        "key": "pgpool.conf",
                        "path": "pgpool.conf"
                    }, {
                        "key": "hba",
                        "path": "pool_hba.conf"
                    }, {
                        "key": "psw",
                        "path": "pool_passwd"
                    }]
                }
            }]
        }
    }]
}
