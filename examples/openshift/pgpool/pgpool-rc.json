{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pg-replica-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PG_USERNAME",
        "description": "The username configured in pgpool for client access",
        "value": "testuser"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "description": "The image prefix to use"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password configured in pgpool for client access",
        "value": "password"
    }, {
        "name": "PGPOOL_SERVICE_NAME",
        "description": "The name of the pgpool Service",
        "value": "pgpool"
    }, {
        "name": "PG_PRIMARY_SERVICE_NAME",
        "description": "The primary configured in pgpool",
        "value": "ms-primary"
    }, {
        "name": "PG_REPLICA_SERVICE_NAME",
        "description": "The replica configured in pgpool",
        "value": "ms-replica"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PGPOOL_SERVICE_NAME}",
            "labels": {
                "name": "${PGPOOL_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PGPOOL_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PGPOOL_SERVICE_NAME}",
            "creationTimestamp": null
        },
        "spec": {
            "strategy": {
                "type": "Recreate",
                "resources": {}
            },
            "triggers": [{
                "type": "ConfigChange"
            }],
            "replicas": 1,
            "selector": {
                "name": "${PGPOOL_SERVICE_NAME}"
            },
            "template": {
                "metadata": {
                    "creationTimestamp": null,
                    "labels": {
                        "name": "${PGPOOL_SERVICE_NAME}"
                    }
                },
                "spec": {
                    "securityContext": {
                        "supplementalGroups": [65534]
                    },

                    "containers": [{
                        "name": "pgpool",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-pgpool:${CCP_IMAGE_TAG}",
                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "env": [{
                            "name": "PG_USERNAME",
                            "value": "${PG_USERNAME}"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
                            "name": "PG_PRIMARY_SERVICE_NAME",
                            "value": "${PG_PRIMARY_SERVICE_NAME}"
                        }, {
                            "name": "PG_REPLICA_SERVICE_NAME",
                            "value": "${PG_REPLICA_SERVICE_NAME}"
                        }],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "securityContext": {
                            "privileged": false
                        },
                        "volumeMounts": [{
                            "mountPath": "/pgconf",
                            "name": "pgconf",
                            "readOnly": false
                        }]

                    }],

                    "volumes": [{
                        "name": "pgconf",
                        "persistentVolumeClaim": {
                            "claimName": "crunchy-pvc"
                        }
                    }],
                    "restartPolicy": "Always",
                    "dnsPolicy": "ClusterFirst"
                }
            }
        },
        "status": {}
    }]
}
