{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-replica2-deployment-example",
        "annotations": {
            "description": "replica2 deployment",
            "iconClass": "icon-database",
            "tags": "crunchy,database,postgresql"
        }
    },
    "parameters": [{
        "name": "PG_PRIMARY_PORT",
        "description": "The postgresql port",
        "value": "5432"
    }, {
        "name": "PG_PRIMARY_USER",
        "description": "The username used for primary / replica replication",
        "value": "primaryuser"
    }, {
        "name": "PG_PRIMARY_HOST",
        "description": "The primary host",
        "value": "primary-dc"
    }, {
        "name": "PGDATA_PATH_OVERRIDE",
        "description": "override for the pgdata path",
        "value": "replica2-dc"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use"
    }, {
        "name": "CCP_IMAGE_PREFIX",
        "description": "The image prefix to use"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }],

    "objects": [{
        "kind": "Deployment",
        "apiVersion": "extensions/v1beta1",
        "metadata": {
            "name": "replica2-dc",
            "labels": {
                "name": "replica2-dc"
            }
        },
        "spec": {
            "replicas": 1,
            "selector": {
                "matchLabels": {
                    "name": "replica2-dc"
                }
            },
            "template": {
                "metadata": {
                    "labels": {
                        "name": "replica2-dc",
			"servicename": "replica-dc"
                    }
                },
                "spec": {
                    "containers": [{
                        "name": "postgres",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                        "env": [{
                            "name": "PG_PRIMARY_PORT",
                            "value": "${PG_PRIMARY_PORT}"
                        }, {
                            "name": "PG_PRIMARY_HOST",
                            "value": "${PG_PRIMARY_HOST}"
                        }, {
                            "name": "PGDATA_PATH_OVERRIDE",
                            "value": "${PGDATA_PATH_OVERRIDE}"
                        }, {
                            "name": "PG_MODE",
                            "value": "replica"
                        }, {
                            "name": "PG_PRIMARY_USER",
                            "value": "${PG_PRIMARY_USER}"
                        }, {
                            "name": "PG_PRIMARY_PASSWORD",
                            "value": ""
                        }, {
                            "name": "PG_USER",
                            "value": "${PG_USER}"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": ""
                        }, {
                            "name": "PG_DATABASE",
                            "value": "${PG_DATABASE}"
                        }, {
                            "name": "PG_ROOT_PASSWORD",
                            "value": ""
                        }, {
                            "name": "PGHOST",
                            "value": "/tmp"
                        }],
                        "volumeMounts": [{
                            "mountPath": "/pgbackrest",
                            "name": "pgbackrest",
                            "readOnly": false
                        }, {
                            "mountPath": "/pgwal",
                            "name": "pgwal",
                            "readOnly": false
                        }, {
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }, {
                            "mountPath": "/pguser",
                            "name": "pguser-volume"
                        }, {
                            "mountPath": "/pgprimary",
                            "name": "pgprimary-volume"
                        }, {
                            "mountPath": "/pgroot",
                            "name": "pgroot-volume"
                        }, {
                            "mountPath": "/pgconf",
                            "name": "postgresql-conf"
                        }],

                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "resources": {},
                        "imagePullPolicy": "IfNotPresent"
                    }],
                    "volumes": [{
                        "name": "pgwal",
                        "persistentVolumeClaim": {
                            "claimName": "crunchy-pvc3"
                        }
                    }, {
                        "name": "pgbackrest",
                        "persistentVolumeClaim": {
                            "claimName": "crunchy-pvc2"
                        }
                    }, {
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "crunchy-pvc"
                        }
                    }, {
                        "name": "pguser-volume",
                        "secret": {
                            "secretName": "pguser-secret"
                        }
                    }, {
                        "name": "pgprimary-volume",
                        "secret": {
                            "secretName": "pgprimary-secret"
                        }
                    }, {
                        "name": "pgroot-volume",
                        "secret": {
                            "secretName": "pgroot-secret"
                        }
                    }, {
                        "name": "postgresql-conf",
                        "configMap": {
                            "name": "postgresql-conf",
                            "items": [{
                                "key": "setup.sql",
                                "path": "setup.sql"
                            }, {
                                "key": "postgresql.conf",
                                "path": "postgresql.conf"
                            }, {
                                "key": "pghba",
                                "path": "pg_hba.conf"
                            }]
                        }
                    }],

                    "restartPolicy": "Always",
                    "terminationGracePeriodSeconds": 30,
                    "dnsPolicy": "ClusterFirst",
                    "securityContext": {}
                }
            },
            "strategy": {
                "type": "RollingUpdate",
                "rollingUpdate": {
                    "maxUnavailable": 1,
                    "maxSurge": 1
                }
            }
        }
    }]
}
