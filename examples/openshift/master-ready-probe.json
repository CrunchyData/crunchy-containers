{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "master-with-probe-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "master with probe Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PG_MASTER_USER",
        "description": "The username used for master-slave replication",
        "value": "master"
    }, {
        "name": "PG_MASTER_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG adminitrator",
        "value": "password"
    }],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "pg-master",
            "labels": {
                "name": "pg-master"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "pg-master"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "pg-master",
            "labels": {
                "name": "pg-master"
            }
        },
        "spec": {
            "containers": [{
                "name": "pg-master",
                "image": "crunchydata/crunchy-postgres:1.2.1",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MASTER_USER",
                    "value": "${PG_MASTER_USER}"
                }, {
                    "name": "PG_MODE",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "${PG_MASTER_PASSWORD}"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "${PG_PASSWORD}"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "${PG_ROOT_PASSWORD}"
                }],
                "securityContext": {
                    "capabilities": {
                    }
                },
                "readinessProbe": {
                    "exec": {
		    	"command": [
				"/usr/pgsql-9.5/bin/pg_isready",
				"-d postgres",
				"-U postgres"
			]
                    },
		    "initialDelaySeconds": 5,
		    "timeoutSeconds": 5
                },


                "volumeMounts": [
		{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                },
		{
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }
		]
            }],
            "volumes": [
	    {
                "name": "pgdata",
                "emptyDir": {}
            },
	    {
                "name": "backup",
                "emptyDir": {}
            }
	    ]
        }
    }]
}
