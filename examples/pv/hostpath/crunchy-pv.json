{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "crunchy-pv$COUNTER"
  },
  "spec": {
    "capacity": {
        "storage": "4Gi"
    },
    "accessModes": [ "ReadWriteMany" ],
    "hostPath": {
        "path": "/data"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
