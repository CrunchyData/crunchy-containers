{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "crunchy-pv$COUNTER"
  },
  "spec": {
    "capacity": {
        "storage": "4Gi"
    },
    "accessModes": [ "ReadWriteMany" ],
    "nfs": {
        "path": "$CCP_STORAGE_PATH",
        "server": "$CCP_NFS_IP"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
