{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-postgres-pgpool-template",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL template that executes pgpool",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "value": "rhel7-9.5-1.2.5",
        "description": "The image tag to pull with"
    }, {
        "name": "PG_USERNAME",
        "description": "The username configured in pgpool for client access",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password configured in pgpool for client access",
        "value": "password"
    }, {
        "name": "PGPOOL_SERVICE_NAME",
        "description": "The name of the pgpool Service",
        "value": "pgpool-dc"
    }, {
        "name": "PG_MASTER_SERVICE_NAME",
        "description": "The database master configured in pgpool",
        "value": "pgmaster"
    }, {
        "name": "PG_SLAVE_SERVICE_NAME",
        "description": "The database slave configured in pgpool",
        "value": "pgslave"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PGPOOL_SERVICE_NAME}",
            "labels": {
                "name": "${PGPOOL_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PGPOOL_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PGPOOL_SERVICE_NAME}",
            "creationTimestamp": null
        },
        "spec": {
            "strategy": {
                "type": "Recreate",
                "resources": {}
            },
            "triggers": [{
                "type": "ConfigChange"
            }],
            "replicas": 1,
            "selector": {
                "name": "${PGPOOL_SERVICE_NAME}"
            },
            "template": {
                "metadata": {
                    "creationTimestamp": null,
                    "labels": {
                        "name": "${PGPOOL_SERVICE_NAME}"
                    }
                },
                "spec": {
                    "containers": [{
                        "name": "server",
                        "image": "172.30.240.45:5000/jeff-project/crunchy-pgpool:${CCP_IMAGE_TAG}",
                        "imagePullPolicy": "Always",
                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "env": [{
                            "name": "PG_USERNAME",
                            "value": "${PG_USERNAME}"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
                            "name": "PG_MASTER_SERVICE_NAME",
                            "value": "${PG_MASTER_SERVICE_NAME}"
                        }, {
                            "name": "PG_SLAVE_SERVICE_NAME",
                            "value": "${PG_SLAVE_SERVICE_NAME}"
                        }],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "securityContext": {
                            "privileged": false
                        },
                        "volumeMounts": []

                    }],

                    "volumes": [],
                    "restartPolicy": "Always",
                    "dnsPolicy": "ClusterFirst"
                }
            }
        },
        "status": {}
    }]
}
