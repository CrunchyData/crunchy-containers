{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-postgres-master-replica-emptydir",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Master and Replica using EmptyDir",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "MASTER_SERVICE_NAME",
        "description": "The name for the master service and container",
        "value": "pgmaster"
    }, {
        "name": "SLAVE_SERVICE_NAME",
        "description": "The name for the slave service and container",
        "value": "pgslave"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to pull with"
    }, {
        "name": "PG_MASTER_USER",
        "description": "The username used for master-slave replication",
        "value": "master"
    }, {
        "name": "PG_MASTER_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG adminitrator",
        "value": "password"
    }],

    "objects": [
{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${MASTER_SERVICE_NAME}",
            "labels": {
                "name": "${MASTER_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${MASTER_SERVICE_NAME}"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, 
{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${SLAVE_SERVICE_NAME}",
            "labels": {
                "name": "${SLAVE_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${SLAVE_SERVICE_NAME}"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, 
{
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${MASTER_SERVICE_NAME}",
            "labels": {
                "name": "${MASTER_SERVICE_NAME}"
            }
        },
        "spec": {
            "containers": [{
                "name": "${MASTER_SERVICE_NAME}",
                "image": "172.30.240.45:5000/jeff-project/crunchy-postgres:${CCP_IMAGE_TAG}",
                "imagePullPolicy": "Always",
                "ports": [{
                    "containerPort": 5432, "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MASTER_USER", "value": "${PG_MASTER_USER}"
                }, { "name": "PG_MODE", "value": "master"
                }, { "name": "PG_MASTER_PASSWORD", "value": "password"
                }, { "name": "PG_USER", "value": "${PG_USER}"
                }, { "name": "PG_PASSWORD", "value": "password"
                }, { "name": "PG_DATABASE", "value": "${PG_DATABASE}"
                }, { "name": "PGHOST", "value": "/tmp"
                }, { "name": "PG_ROOT_PASSWORD", "value": "password"
                }],
                "securityContext": { "capabilities": { } },
                "volumeMounts": [ 
{ "mountPath": "/pgdata", "name": "pgdata", "readOnly": false },
{ "mountPath": "/backup", "name": "backup", "readOnly": true }
		]
            }],
            "volumes": [
	    { "name": "pgdata", "emptyDir": {} },
	    { "name": "backup", "emptyDir": {} }
	    ]
        }
    },
{
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${SLAVE_SERVICE_NAME}",
            "labels": {
                "name": "${SLAVE_SERVICE_NAME}"
            }
        },
        "spec": {
            "containers": [{
                "name": "${SLAVE_SERVICE_NAME}",
                "image": "172.30.240.45:5000/jeff-project/crunchy-postgres:${CCP_IMAGE_TAG}",
                "imagePullPolicy": "Always",
                "ports": [{
                    "containerPort": 5432, "protocol": "TCP"
                }],
                "env": [
                { "name": "PG_MODE", "value": "slave"
                }, { "name": "PG_MASTER_HOST", "value": "${MASTER_SERVICE_NAME}"
                }, { "name": "PG_MASTER_PORT", "value": "5432"
                }, { "name": "PG_MASTER_USER", "value": "${PG_MASTER_USER}"
                }, { "name": "PG_MASTER_PASSWORD", "value": "password"
                }, { "name": "PG_USER", "value": "${PG_USER}"
                }, { "name": "PG_PASSWORD", "value": "password"
                }, { "name": "PG_DATABASE", "value": "${PG_DATABASE}"
                }, { "name": "PGHOST", "value": "/tmp"
                }, { "name": "PG_ROOT_PASSWORD", "value": "password"
                }],
                "securityContext": { "capabilities": { } },
                "volumeMounts": [ 
{ "mountPath": "/pgdata", "name": "pgdata", "readOnly": false },
{ "mountPath": "/backup", "name": "backup", "readOnly": true }
		]
            }],
            "volumes": [
	    { "name": "pgdata", "emptyDir": {} },
	    { "name": "backup", "emptyDir": {} }
	    ]
        }
    }
]
}
