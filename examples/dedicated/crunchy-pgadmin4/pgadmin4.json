{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-pgadmin4",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy pgadmin4 pod, service, and PVC",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
            "name": "NAME",
            "description": "pod name to use",
            "value": "pgadmin4"
        }, {
            "name": "CCP_IMAGE_PREFIX",
            "description": "image prefix to use",
            "value": "crunchydata"
        }, {
            "name": "CCP_IMAGE_TAG",
            "description": "image version to use",
            "value": "rhel7-9.6.5-1.6.0"
        }, {
            "name": "PVC_NAME",
            "description": "The name for the pvc",
            "value": "pgadmin4-pvc"
        }, {
            "name": "PVC_SIZE",
            "description": "The size for the PVC",
            "value": "300M"
        }, {
            "name": "PVC_ACCESS_MODE",
            "description": "The access mode for the PVC",
            "value": "ReadWriteMany"
        }

    ],

    "objects": [{
        "kind": "PersistentVolumeClaim",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PVC_NAME}"
        },
        "spec": {
            "accessModes": [
                "${PVC_ACCESS_MODE}"
            ],
            "resources": {
                "requests": {
                    "storage": "${PVC_SIZE}"
                }
            }
        }
    }, {
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${NAME}",
            "labels": {
                "name": "${NAME}"
            }
        },
        "spec": {
            "ports": [{
                "name": "web",
                "protocol": "TCP",
                "port": 5050,
                "targetPort": 5050
            }],
            "selector": {
                "name": "${NAME}"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${NAME}",
            "labels": {
                "name": "${NAME}"
            }
        },
        "spec": {
            "securityContext": {},

            "containers": [{
                "name": "pgadmin4",
                "image": "${CCP_IMAGE_PREFIX}/crunchy-pgadmin4:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5050,
                    "protocol": "TCP"
                }],
                "env": [],
                "securityContext": {
                    "capabilities": {}
                },


                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "rootdata",
                    "readOnly": false
                }]
            }],
            "volumes": [{
                "name": "rootdata",
                "persistentVolumeClaim": {
                    "claimName": "${PVC_NAME}"
                }
            }]
        }
    }]
}
