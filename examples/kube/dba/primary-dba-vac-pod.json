{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "primary-dba",
        "labels": {
            "name": "primary-dba"
        }
    },
    "spec": {
        "serviceAccount": "dba-sa",
        "containers": [{
            "name": "dba",
            "image": "$CCP_IMAGE_PREFIX/crunchy-dba:$CCP_IMAGE_TAG",
            "env": [{
                "name": "KUBE_PROJECT",
                "value": "$NAMESPACE"
            }, {
                "name": "PG_USER",
                "value": "testuser"
            }, {
                "name": "PG_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_DATABASE",
                "value": "userdb"
            }, {
                "name": "PG_PORT",
                "value": "5432"
            }, {
                "name": "VAC_SCHEDULE",
                "value": "0 0,5,10,15,20,25,30,35,40,45,50,55 * * * *"
            }, {
                "name": "VAC_ANALYZE",
                "value": "true"
            }, {
                "name": "VAC_TABLE",
                "value": "testtable"
            }, {
                "name": "CCP_IMAGE_TAG",
                "value": "$CCP_IMAGE_TAG"
            }, {
                "name": "JOB_HOST",
                "value": "primary-dba"
            }]
        }, {
            "name": "postgres",
            "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
            "env": [{
                "name": "PG_PRIMARY_USER",
                "value": "primaryuser"
            }, {
                "name": "PG_MODE",
                "value": "primary"
            }, {
                "name": "PG_PRIMARY_PORT",
                "value": "5432"
            }, {
                "name": "PG_PRIMARY_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_USER",
                "value": "testuser"
            }, {
                "name": "PG_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_DATABASE",
                "value": "userdb"
            }, {
                "name": "PG_ROOT_PASSWORD",
                "value": "password"
            }],
            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }]
        }],
        "volumes": [{
            "name": "pgdata",
            "emptyDir": {}
        }]
    }
}
