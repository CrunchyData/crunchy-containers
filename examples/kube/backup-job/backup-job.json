{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "backup-job"
    },
    "spec": {
        "template": {
            "metadata": {
                "name": "backup-job",
                "labels": {
                    "app": "backup-job"
                }
            },
            "spec": {
                "volumes": [{
                    "name": "pgdata",
                    "persistentVolumeClaim": {
                        "claimName": "backup-pvc"
                    }
                }],
                "securityContext": {
                    $CCP_SECURITY_CONTEXT
                },
                "containers": [{
                    "name": "backup-job",
                    "image": "$CCP_IMAGE_PREFIX/crunchy-backup:$CCP_IMAGE_TAG",
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }],
                    "env": [{
                        "name": "BACKUP_HOST",
                        "value": "primary-pvc"
                    }, {
                        "name": "BACKUP_USER",
                        "value": "primaryuser"
                    }, {
                        "name": "BACKUP_PASS",
                        "value": "password"
                    }, {
                        "name": "BACKUP_PORT",
                        "value": "5432"
                    }]
                }],
                "restartPolicy": "Never"
            }
        }
    }
}
