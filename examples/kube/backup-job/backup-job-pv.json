{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "backup-job-pv"
  },
  "spec": {
    "capacity": {
        "storage": "100M"
    },
    "accessModes": [ "ReadWriteMany" ],
    "nfs": {
        "path": "$NFS_SHARE_PATH",
        "server": "$NFS_SHARE_SERVER"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
