{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "badger",
        "labels": {
            "name": "badger"
        }
    },
    "spec": {
        "containers": [{
            "name": "postgres",
            "image": "crunchydata/crunchy-postgres:$CCP_IMAGE_TAG",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
            "env": [{
                "name": "PG_PRIMARY_USER",
                "value": "primary"
            }, {
                "name": "PG_MODE",
                "value": "primary"
            }, {
                "name": "PG_PRIMARY_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_USER",
                "value": "testuser"
            }, {
                "name": "PG_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_DATABASE",
                "value": "userdb"
            }, {
                "name": "PG_ROOT_PASSWORD",
                "value": "password"
            }],
            "securityContext": {},

            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }]
        }, {
            "name": "badger",
            "image": "crunchydata/crunchy-pgbadger:$CCP_IMAGE_TAG",
            "ports": [{
                "containerPort": 10000,
                "protocol": "TCP"
            }],
            "env": [],
            "securityContext": {},

            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": true
            }]
        }],
        "volumes": [{
            "name": "pgdata",
            "emptyDir": {}
        }]
    }
}
