{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "$CCP_NAMESPACE-backup-pgdata",
        "labels": {
            "name": "$CCP_NAMESPACE-backup-pgdata",
            "cleanup": "$CCP_NAMESPACE-backup"
        }
    },
    "spec": {
        "capacity": {
            "storage": "$CCP_STORAGE_CAPACITY"
        },
        "accessModes": [
            "$CCP_STORAGE_MODE"
        ],
        "hostPath": {
            "path": "$CCP_STORAGE_PATH/$CCP_NAMESPACE-backup"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}