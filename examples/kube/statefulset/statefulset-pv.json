{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "statefulset-pgdata-0",
        "labels": {
            "name": "statefulset-pgdata"
        }
    },
    "spec": {
        "capacity": {
            "storage": "$CCP_STORAGE_CAPACITY"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "hostPath": {
            "path": "$CCP_STORAGE_PATH/statefulset"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}

