{
  "apiVersion": "v1",
  "kind": "ServiceAccount",
  "metadata": {
    "name": "statefulset-sa"
  }
}

{
  "apiVersion": "v1",
  "kind": "Service",
  "metadata": {
    "name": "statefulset",
    "labels": {
      "app": "statefulset"
    }
  },
  "spec": {
    "ports": [
      {
        "port": 5432,
        "name": "web"
      }
    ],
    "clusterIP": "None",
    "selector": {
      "app": "statefulset"
    }
  }
}

{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "statefulset-primary",
        "labels": {
            "name": "statefulset-primary"
        }
    },
    "spec": {
        "ports": [{
            "protocol": "TCP",
            "port": 5432,
            "targetPort": 5432,
            "nodePort": 0
        }],
        "selector": {
            "name": "statefulset-primary"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "statefulset-replica",
        "labels": {
            "name": "statefulset-replica"
        }
    },
    "spec": {
        "ports": [{
            "protocol": "TCP",
            "port": 5432,
            "targetPort": 5432,
            "nodePort": 0
        }],
        "selector": {
            "name": "statefulset-replica"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "statefulset",
        "labels": {
            "name": "statefulset"
        }
    },
    "spec": {
        "capacity": {
            "storage": "$CCP_STORAGE_CAPACITY"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "hostPath": {
            "path": "$CCP_STORAGE_PATH"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}

{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
      "name": "statefulset-pgdata"
    },
    "spec": {
      "accessModes": [
        "ReadWriteMany"
      ],
      "resources": {
        "requests": {
          "storage": "100M"
        }
      }
    }
}

{
    "apiVersion": "apps/v1beta1",
    "kind": "StatefulSet",
    "metadata": {
        "name": "statefulset"
    },
    "spec": {
        "serviceName": "statefulset",
        "replicas": 2,
        "template": {
            "metadata": {
                "labels": {
                    "app": "statefulset"
                }
            },
            "spec": {
        	"serviceAccount": "statefulset-sa",
            "securityContext": {
			$CCP_SECURITY_CONTEXT
            },
                "containers": [{
                    "name": "statefulset",
                    "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                    "ports": [{
                        "containerPort": 5432,
                        "name": "postgres"
                    }],
                    "env": [{
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }, {
                        "name": "PG_MODE",
                        "value": "set"
                    }, {
                        "name": "PG_PRIMARY_HOST",
                        "value": "statefulset-primary"
                    }, {
                        "name": "PG_REPLICA_HOST",
                        "value": "statefulset-replica"
                    }, {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    }, {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "password"
                    }, {
                        "name": "PG_USER",
                        "value": "testuser"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "password"
                    }],
                    "volumeMounts": [{
                        "name": "pgdata",
                        "mountPath": "/pgdata",
                        "readOnly": false
                    }]
                }],
                "volumes": [{
                    "name": "pgdata",
                    "persistentVolumeClaim": {
                        "claimName": "statefulset-pgdata"
                    }
                }]
            }
        }
    }
}
