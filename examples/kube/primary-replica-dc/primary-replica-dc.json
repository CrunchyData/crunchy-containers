{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "primary-dc",
        "labels": {
            "name": "primary-dc",
            "cleanup": "$CCP_NAMESPACE-primary-replica-dc"
        }
    },
    "spec": {
        "ports": [
            {
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }
        ],
        "selector": {
            "name": "primary-dc"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "replica-dc",
        "labels": {
            "name": "replica-dc",
            "cleanup": "$CCP_NAMESPACE-primary-replica-dc"
        }
    },
    "spec": {
        "ports": [
            {
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }
        ],
        "selector": {
            "name": "replica-dc"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "primary-dc",
        "labels": {
            "name": "primary-dc",
            "cleanup": "$CCP_NAMESPACE-primary-replica-dc"
        }
    },
    "spec": {
        "containers": [
            {
                "name": "postgres",
                "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                "ports": [
                    {
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }
                ],
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 1
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 1
                },
                "env": [
                    {
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    },
                    {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    },
                    {
                        "name": "PG_MODE",
                        "value": "primary"
                    },
                    {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_USER",
                        "value": "testuser"
                    },
                    {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    },
                    {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }
                ],
                "volumeMounts": [
                    {
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    },
                    {
                        "mountPath": "/backup",
                        "name": "backup",
                        "readOnly": true
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "pgdata",
                "emptyDir": {}
            },
            {
                "name": "backup",
                "emptyDir": {}
            }
        ]
    }
}

{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "replica-dc",
        "labels": {
            "name": "replica-dc",
            "cleanup": "$CCP_NAMESPACE-primary-replica-dc"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "name": "replica-dc"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "name": "replica-dc",
                    "cleanup": "$CCP_NAMESPACE-primary-replica-dc"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "postgres",
                        "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                        "readinessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/readiness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 1
                        },
                        "livenessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/liveness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 1
                        },
                        "env": [
                            {
                                "name": "PG_PRIMARY_HOST",
                                "value": "primary-dc"
                            },
                            {
                                "name": "PG_PRIMARY_SERVICE_NAME",
                                "value": "primary-dc"
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "value": "5432"
                            },
                            {
                                "name": "PG_MODE",
                                "value": "replica"
                            },
                            {
                                "name": "PG_PRIMARY_USER",
                                "value": "primaryuser"
                            },
                            {
                                "name": "PG_PRIMARY_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PG_USER",
                                "value": "testuser"
                            },
                            {
                                "name": "PG_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PG_DATABASE",
                                "value": "userdb"
                            },
                            {
                                "name": "PG_ROOT_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PGHOST",
                                "value": "/tmp"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            }
                        ],
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {},
                        "imagePullPolicy": "IfNotPresent"
                    }
                ],
                "volumes": [
                    {
                        "name": "pgdata",
                        "emptyDir": {}
                    }
                ],
                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 30,
                "dnsPolicy": "ClusterFirst"
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}