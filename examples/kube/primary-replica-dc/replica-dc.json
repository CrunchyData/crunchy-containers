{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "replica-dc",
        "labels": {
            "name": "replica-dc"
        }
    },
    "spec": {
        "replicas": 2,
        "selector": {
            "matchLabels": {
                "name": "replica-dc"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "name": "replica-dc"
                }
            },
            "spec": {
                "containers": [{
                    "name": "postgres",
                    "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                    "env": [{
                        "name": "PG_PRIMARY_HOST",
                        "value": "primary-dc"
                    }, {
                        "name": "PG_PRIMARY_SERVICE_NAME",
                        "value": "primary-dc"
                    }, {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    }, {
                        "name": "PG_MODE",
                        "value": "replica"
                    }, {
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    }, {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "password"
                    }, {
                        "name": "PG_USER",
                        "value": "testuser"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "password"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }],
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }],

                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "resources": {},
                    "imagePullPolicy": "IfNotPresent"
                }],
                "volumes": [{
                    "name": "pgdata",
                    "emptyDir": {}
                }],

                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 30,
                "dnsPolicy": "ClusterFirst",
                "securityContext": {
			$CCP_SECURITY_CONTEXT
                }
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}
