{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "custom-config",
        "labels": {
            "name": "custom-config"
        }
    },
    "spec": {
        "ports": [
            {
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }
        ],
        "selector": {
            "name": "custom-config"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "custom-config",
        "labels": {
            "name": "custom-config"
        }
    },
    "spec": {
        "containers": [
            {
                "name": "postgres",
                "securityContext": {
                    $CCP_SECURITY_CONTEXT
                },
                "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 10,
                    "timeoutSeconds": 1
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 120,
                    "timeoutSeconds": 1
                },
                "ports": [
                    {
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }
                ],
                "env": [
                    {
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    },
                    {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    },
                    {
                        "name": "PGHOST",
                        "value": "/tmp"
                    },
                    {
                        "name": "PG_MODE",
                        "value": "primary"
                    },
                    {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_USER",
                        "value": "testuser"
                    },
                    {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    },
                    {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "password"
                    }
                ],
                "volumeMounts": [
                    {
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    },
                    {
                        "mountPath": "/pgconf",
                        "name": "pgconf",
                        "readOnly": true
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "pgdata",
                "persistentVolumeClaim": {
                    "claimName": "custom-config-pgdata"
                }
            },
            {
                "name": "pgconf",
                "configMap": {
                    "name": "custom-config-pgconf"
                }
            }
        ]
    }
}
