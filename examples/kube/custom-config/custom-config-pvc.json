{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
        "name": "custom-config-pgdata"
    },
    "spec": {
        "selector": {
          "matchLabels": {
            "name": "$CCP_NAMESPACE-custom-config-pgdata"
          }
        },
        "accessModes": [
            "$CCP_STORAGE_MODE"
        ],
        "resources": {
            "requests": {
                "storage": "$CCP_STORAGE_CAPACITY"
            }
        }
    }
}

