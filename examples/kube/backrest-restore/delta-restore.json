{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
        "name": "backrest-restore-pgdata"
    },
    "spec": {
        "accessModes": [
            "ReadWriteMany"
        ],
        "resources": {
            "requests": {
                "storage": "400M"
            }
        }
    }
}

{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "backrest-delta-restore-job"
    },
    "spec": {
        "template": {
            "metadata": {
                "name": "backrest-delta-restore-job",
                "labels": {
                    "app": "backrest-delta-restore-job"
                }
            },
            "spec": {
                "securityContext": {
                    $CCP_SECURITY_CONTEXT
                },
                "containers": [
                    {
                        "name": "backrest-restore",
                        "image": "$CCP_IMAGE_PREFIX/crunchy-backrest-restore:$CCP_IMAGE_TAG",
                        "env": [
                            {
                                "name": "STANZA",
                                "value": "db"
                            },
                            {
                                "name": "DELTA"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/pgconf",
                                "name": "pgconf",
                                "readOnly": true
                            },
                            {
                                "mountPath": "/backrestrepo",
                                "name": "backrestrepo",
                                "readOnly": true
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "pgconf",
                        "configMap": {
                            "name": "backrest-restore-pgconf"
                        }
                    },
                    {
                        "name": "backrestrepo",
                        "persistentVolumeClaim": {
                            "claimName": "backrest-restore-backrestrepo"
                        }
                    },
                    {
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "backrest-restore-pgdata"
                        }
                    }
                ],
                "restartPolicy": "Never"
            }
        }
    }
}
