{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "pitr-pgdata",
        "labels": {
            "name": "pitr-pgdata"
        }
    },
    "spec": {
        "capacity": {
            "storage": "$CCP_STORAGE_CAPACITY"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "nfs": {
            "path": "$CCP_STORAGE_PATH",
            "server": "$CCP_NFS_IP"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}

