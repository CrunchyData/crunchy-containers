{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "pitr",
        "labels": {
            "name": "pitr"
        }
    },
    "spec": {
        "ports": [{
            "protocol": "TCP",
            "port": 5432,
            "targetPort": 5432,
            "nodePort": 0
        }],
        "selector": {
            "name": "pitr"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    },
    "status": {
        "loadBalancer": {}
    }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pitr",
        "labels": {
            "name": "pitr"
        }
    },
    "spec": {
        "securityContext": {
            $CCP_SECURITY_CONTEXT
        },
        "containers": [{
            "name": "postgres",
            "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
            "env": [{
                "name": "PGHOST",
                "value": "/tmp"
            }, {
                "name": "PG_PRIMARY_USER",
                "value": "primaryuser"
            }, {
                "name": "PG_MODE",
                "value": "primary"
            }, {
                "name": "PG_PRIMARY_PASSWORD",
                "value": "password"
            }, {
                "name":"PG_PRIMARY_PORT",
                "value":"5432"
            }, {
                "name": "PG_USER",
                "value": "testuser"
            }, {
                "name": "PG_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_DATABASE",
                "value": "userdb"
            }, {
                "name": "PG_ROOT_PASSWORD",
                "value": "password"
            }, {
                "name": "ARCHIVE_MODE",
                "value": "on"
            }, {
                "name": "ARCHIVE_TIMEOUT",
                "value": "60"
            }],
            "securityContext": {
                $CCP_SECURITY_CONTEXT
            },


            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }, {
                "mountPath": "/pgwal",
                "name": "pgwal",
                "readOnly": false
            }, {
                "mountPath": "/backup",
                "name": "backup",
                "readOnly": true
            }]
        }],
        "volumes": [{
            "name": "pgdata",
            "persistentVolumeClaim": {
                "claimName": "pitr-pgdata"
            }
        }, {
            "name": "pgwal",
            "persistentVolumeClaim": {
                "claimName": "pitr-pgwal"
            }
        }, {
            "name": "backup",
            "emptyDir": {}
        }]
    }
}
