{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "master-pitr",
        "labels": {
            "name": "master-pitr"
        }
    },
    "spec": {
        "securityContext": {
            "supplementalGroups": [65534]
        },
        "containers": [{
            "name": "postgres",
            "image": "crunchydata/crunchy-postgres:$CCP_IMAGE_TAG",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
            "env": [{
                "name": "PGHOST",
                "value": "/tmp"
            }, {
                "name": "PG_PRIMARY_USER",
                "value": "master"
            }, {
                "name": "PG_MODE",
                "value": "primary"
            }, {
                "name": "PG_PRIMARY_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_USER",
                "value": "testuser"
            }, {
                "name": "PG_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_DATABASE",
                "value": "userdb"
            }, {
                "name": "PG_ROOT_PASSWORD",
                "value": "password"
            }, {
                "name": "ARCHIVE_MODE",
                "value": "on"
            }, {
                "name": "ARCHIVE_TIMEOUT",
                "value": "60"
            }],
            "securityContext": {
                "capabilities": {}
            },


            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }, {
                "mountPath": "/pgwal",
                "name": "pgwal",
                "readOnly": false
            }, {
                "mountPath": "/backup",
                "name": "backup",
                "readOnly": true
            }]
        }],
        "volumes": [{
            "name": "pgdata",
            "persistentVolumeClaim": {
                "claimName": "crunchy-pvc"
            }
        }, {
            "name": "pgwal",
            "persistentVolumeClaim": {
                "claimName": "crunchy-pvc2"
            }
        }, {
            "name": "backup",
            "emptyDir": {}
        }]
    }
}
