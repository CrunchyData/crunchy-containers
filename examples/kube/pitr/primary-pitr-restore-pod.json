{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "primary-pitr-restore",
        "labels": {
            "name": "primary-pitr-restore"
        }
    },
    "spec": {
        "securityContext": {
            $CCP_SECURITY_CONTEXT
        },
        "volumes": [{
            "name": "pgdata",
            "persistentVolumeClaim": {
                "claimName": "primary-pitr-restore-pvc"
            }
        }, {
            "name": "pgwal",
            "emptyDir": {}
        }, {
            "name": "recover",
            "persistentVolumeClaim": {
                "claimName": "recover-pvc"
            }
        }, {
            "name": "backup",
            "persistentVolumeClaim": {
                "claimName": "backup-primary-pitr-pvc"
            }
        }],
        "containers": [{
            "name": "postgres",
            "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
            "env": [{
                "name": "PG_PRIMARY_USER",
                "value": "primaryuser"
            }, {
                "name": "PG_MODE",
                "value": "primary"
            }, {
                "name": "PG_MODE",
                "value": "primary"
            }, {
                "name": "WAL_DIR",
                "value": "primary-pitr-wal"
            }, {
                "name": "ARCHIVE_MODE",
                "value": "on"
            }, {
                "name": "PG_PRIMARY_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_USER",
                "value": "testuser"
            }, {
                "name": "PG_PASSWORD",
                "value": "password"
            }, {
                "name":"PG_PRIMARY_PORT",
                "value":"5432"
            }, {
                "name": "BACKUP_PATH",
                "value": "primary-pitr-backups/2018-03-02-19-41-50"
            }, {
                "name": "RECOVERY_TARGET_NAME",
                "value": "afterchanges"
            }, {
                "name": "PGHOST",
                "value": "/tmp"
            }, {
                "name": "PG_DATABASE",
                "value": "userdb"
            }, {
                "name": "PG_ROOT_PASSWORD",
                "value": "password"
            }],
            "securityContext": {
                $CCP_SECURITY_CONTEXT
            },
            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }, {
                "mountPath": "/pgwal",
                "name": "pgwal",
                "readOnly": false
            }, {
                "mountPath": "/recover",
                "name": "recover",
                "readOnly": true
            }, {
                "mountPath": "/backup",
                "name": "backup",
                "readOnly": true
            }]
        }]
    }
}
