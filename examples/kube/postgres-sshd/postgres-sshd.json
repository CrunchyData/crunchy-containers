{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "postgres-sshd",
        "labels": {
            "name": "postgres-sshd"
        }
    },
    "spec": {
        "ports": [{
            "name": "pgsql",
            "protocol": "TCP",
            "port": 5432,
            "targetPort": 5432,
            "nodePort": 0
  }, {
            "name": "sshd",
            "protocol": "TCP",
            "port": 2022,
            "targetPort": 2022,
            "nodePort": 0
  }],
        "selector": {
            "name": "postgres-sshd"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "postgres-sshd",
        "labels": {
            "name": "postgres-sshd"
        }
    },
    "spec": {
        "securityContext": { $CCP_SECURITY_CONTEXT },
        "containers": [
            {
                "name": "pgsql",
                "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                "ports": [
                    {
                        "containerPort": 5432,
                        "protocol": "TCP"
                    },
                    {
                        "containerPort": 2022,
                        "protocol": "TCP"
                    }
                ],
                "env": [
                    {
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    },
                    {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    },
                    {
                        "name": "PG_MODE",
                        "value": "primary"
                    },
                    {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PGHOST",
                        "value": "/tmp"
                    },
                    {
                        "name": "PG_USER",
                        "value": "testuser"
                    },
                    {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    },
                    {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "ARCHIVE_TIMEOUT",
                        "value": "60"
                    },
                    {
                        "name": "ENABLE_SSHD",
                        "value": "true"
                    }
                ],
                "volumeMounts": [
                    {
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    },
                    {
                        "mountPath": "/pgconf",
                        "name": "pgconf",
                        "readOnly": true
                    },
                    {
                        "mountPath": "/backrestrepo",
                        "name": "backrestrepo",
                        "readOnly": false
                    },
                    {
                        "mountPath": "/sshd",
                        "name": "sshd",
                        "readOnly": true
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "pgconf",
                "configMap": {
                    "name": "postgres-sshd-pgconf"
                }
            },
            {
                "name": "backrestrepo",
                "persistentVolumeClaim": {
                    "claimName": "postgres-sshd-backrestrepo"
                }
            },
            {
                "name": "pgdata",
                "persistentVolumeClaim": {
                    "claimName": "postgres-sshd-pgdata"
                }
            },
            {
                "name": "sshd",
                "secret": {
                    "secretName": "postgres-sshd-secrets",
                    "items": [
                        {
                            "key": "ssh-host-rsa",
                            "path": "ssh_host_rsa_key"
                        },
                        {
                            "key": "ssh-host-ecdsa",
                            "path": "ssh_host_ecdsa_key"
                        },
                        {
                            "key": "ssh-host-ed25519",
                            "path": "ssh_host_ed25519_key"
                        }
                    ]
                }
            }
        ]
    }
}
