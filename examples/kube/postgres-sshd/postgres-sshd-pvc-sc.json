{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
      "name": "postgres-sshd-pgdata"
    },
    "spec": {
      "accessModes": [
        "$CCP_STORAGE_MODE"
      ],
      "storageClassName": "$CCP_STORAGE_CLASS",
      "resources": {
        "requests": {
          "storage": "$CCP_STORAGE_CAPACITY"
        }
      }
    }
}

{
    "kind": "PersistentVolumeClaim",
