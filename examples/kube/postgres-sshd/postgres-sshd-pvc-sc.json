    "metadata": {
      "name": "postgres-sshd-backrestrepo"
    },
    "spec": {
      "accessModes": [
        "$CCP_STORAGE_MODE"
      ],
      "storageClassName": "$CCP_STORAGE_CLASS",
      "resources": {
        "requests": {
          "storage": "$CCP_STORAGE_CAPACITY"
        }
      }
    }
}
