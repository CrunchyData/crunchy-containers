{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "replica-dc",
        "labels": {
            "name": "replica-dc"
        }
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "replica-dc"
                }
            },
            "spec": {
                "containers": [{
                    "name": "postgres",
                    "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                    "env": [{
                        "name": "PG_PRIMARY_HOST",
                        "value": "primary-dc"
                    }, {
                        "name": "PG_PRIMARY_SERVICE_NAME",
                        "value": "primary-dc"
                    }, {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    }, {
                        "name": "PG_MODE",
                        "value": "replica"
                    }, {
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    }, {
                        "name": "PG_USER",
                        "value": "testuser"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    }, {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": ""
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": ""
                    }, {
                        "name": "PG_PASSWORD",
                        "value": ""
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }],
                    "volumeMounts": [ {
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    	}, {
                        "mountPath": "/pguser",
                        "name": "pguser-volume"
                    }, {
                        "mountPath": "/pgprimary",
                        "name": "pgprimary-volume"
                    }, {
                        "mountPath": "/pgroot",
                        "name": "pgroot-volume"
                    } ],

                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "resources": {},
                    "imagePullPolicy": "IfNotPresent"
                }],
                "volumes": [
		{
                    "name": "pgdata",
                    "emptyDir": {}
                }, {
                    "name": "pguser-volume",
                    "secret": {
                        "secretName": "pguser-secret"
                    }
                }, {
                    "name": "pgprimary-volume",
                    "secret": {
                        "secretName": "pgprimary-secret"
                    }
                }, {
                    "name": "pgroot-volume",
                    "secret": {
                        "secretName": "pgroot-secret"
                    }
                } ],

                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 30,
                "dnsPolicy": "ClusterFirst",
                "securityContext": {
			$CCP_SECURITY_CONTEXT
                }
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}
