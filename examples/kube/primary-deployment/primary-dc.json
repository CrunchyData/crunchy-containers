{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "master-dc",
        "labels": {
            "name": "master-dc"
        }
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "master-dc"
                }
            },
            "spec": {
                "containers": [{
                    "name": "postgres",
                    "image": "crunchydata/crunchy-postgres:$CCP_IMAGE_TAG",
                    "env": [{
                        "name": "PG_MASTER_PORT",
                        "value": "5432"
                    }, {
                        "name": "PG_MODE",
                        "value": "master"
                    }, {
                        "name": "PGDATA_PATH_OVERRIDE",
                        "value": "master-dc"
                    }, {
                        "name": "PG_MASTER_USER",
                        "value": "master"
                    }, {
                        "name": "PG_MASTER_PASSWORD",
                        "value": ""
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": ""
                    }, {
                        "name": "PG_PASSWORD",
                        "value": ""
                    }, {
                        "name": "PG_USER",
                        "value": "testuser"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }],
                    "volumeMounts": [
			{
                        "mountPath": "/pgbackrest",
                        "name": "pgbackrest",
                        "readOnly": false
                    }, {
                        "mountPath": "/pgwal",
                        "name": "pgwal",
                        "readOnly": false
                    }, {
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }, {
                        "mountPath": "/pguser",
                        "name": "pguser-volume"
                    }, {
                        "mountPath": "/pgmaster",
                        "name": "pgmaster-volume"
                    }, {
                        "mountPath": "/pgroot",
                        "name": "pgroot-volume"
                    }, {
                        "mountPath": "/pgconf",
                        "name": "postgresql-conf"
                    } ],

                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "resources": {},
                    "imagePullPolicy": "IfNotPresent"
                }],
                "volumes": [
		{
                    "name": "pgwal",
            		"persistentVolumeClaim": {
                		"claimName": "crunchy-pvc3"
            		}
                },{
                    "name": "pgbackrest",
            		"persistentVolumeClaim": {
                		"claimName": "crunchy-pvc2"
            		}
                },{
                    "name": "pgdata",
            		"persistentVolumeClaim": {
                		"claimName": "crunchy-pvc"
            		}
                },{
                    "name": "pguser-volume",
                    "secret": {
                        "secretName": "pguser-secret"
                    }
                },{
                    "name": "pgmaster-volume",
                    "secret": {
                        "secretName": "pgmaster-secret"
                    }
                },{
                    "name": "pgroot-volume",
                    "secret": {
                        "secretName": "pgroot-secret"
                    }
                }, {
                "name": "postgresql-conf",
                "configMap": {
                    "name": "postgresql-conf",
                    "items": [{
                        "key": "setup.sql",
                        "path": "setup.sql"
                    }, {
                        "key": "postgresql.conf",
                        "path": "postgresql.conf"
                    }, {
                        "key": "pghba",
                        "path": "pg_hba.conf"
                    }]
                }
            }

		],

                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 30,
                "dnsPolicy": "ClusterFirst",
                "securityContext": {
                }
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}
