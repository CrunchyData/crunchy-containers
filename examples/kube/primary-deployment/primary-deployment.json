{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "primary-deployment",
        "labels": {
            "name": "primary-deployment"
        }
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "primary-deployment"
                }
            },
            "spec": {
                "containers": [{
                    "name": "postgres",
                    "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                    "env": [{
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    }, {
                        "name": "PG_MODE",
                        "value": "primary"
                    }, {
                        "name": "PGDATA_PATH_OVERRIDE",
                        "value": "primary-deployment"
                    }, {
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    }, {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": ""
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": ""
                    }, {
                        "name": "PG_PASSWORD",
                        "value": ""
                    }, {
                        "name": "PG_USER",
                        "value": "testuser"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }],
                    "volumeMounts": [
			{
                        "mountPath": "/pgbackrest",
                        "name": "pgbackrest",
                        "readOnly": false
                    }, {
                        "mountPath": "/pgwal",
                        "name": "pgwal",
                        "readOnly": false
                    }, {
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }, {
                        "mountPath": "/pguser",
                        "name": "pguser-volume"
                    }, {
                        "mountPath": "/pgprimary",
                        "name": "pgprimary-volume"
                    }, {
                        "mountPath": "/pgroot",
                        "name": "pgroot-volume"
                    }, {
                        "mountPath": "/pgconf",
                        "name": "primary-deployment-pgconf"
                    } ],

                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "resources": {},
                    "imagePullPolicy": "IfNotPresent"
                }],
                "volumes": [
		{
                    "name": "pgwal",
            		"persistentVolumeClaim": {
                		"claimName": "primary-deployment-pgwal"
            		}
                },{
                    "name": "pgbackrest",
            		"persistentVolumeClaim": {
                		"claimName": "primary-deployment-pgbackrest"
            		}
                },{
                    "name": "pgdata",
            		"persistentVolumeClaim": {
                		"claimName": "primary-deployment-pgdata"
            		}
                },{
                    "name": "pguser-volume",
                    "secret": {
                        "secretName": "pguser-secret"
                    }
                },{
                    "name": "pgprimary-volume",
                    "secret": {
                        "secretName": "pgprimary-secret"
                    }
                },{
                    "name": "pgroot-volume",
                    "secret": {
                        "secretName": "pgroot-secret"
                    }
                }, {
                "name": "primary-deployment-pgconf",
                "configMap": {
                    "name": "primary-deployment-pgconf",
                    "items": [{
                        "key": "setup.sql",
                        "path": "setup.sql"
                    }, {
                        "key": "postgresql.conf",
                        "path": "postgresql.conf"
                    }, {
                        "key": "pghba",
                        "path": "pg_hba.conf"
                    }]
                }
            }

		],

                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 30,
                "dnsPolicy": "ClusterFirst",
                "securityContext": {
			$CCP_SECURITY_CONTEXT
                }
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}

