{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
        "name": "postgres-ha-01-pgdata",
        "labels": {
            "application": "postgres-ha",
            "cleanup": "$CCP_NAMESPACE-postgres-ha"
        }
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "name": "$CCP_NAMESPACE-postgres-ha-01-pgdata"
            }
        },
        "accessModes": [
            "$CCP_STORAGE_MODE"
        ],
        "resources": {
            "requests": {
                "storage": "$CCP_STORAGE_CAPACITY"
            }
        }
    }
}

