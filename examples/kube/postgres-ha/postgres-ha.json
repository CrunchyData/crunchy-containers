{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "postgres-ha-master",
        "labels": {
            "application": "postgres-ha",
            "name": "postgres-ha",
            "cleanup": "$CCP_NAMESPACE-postgres-ha"
        }
    },
    "spec": {
        "ports": [
            {
                "name": "postgres",
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432
            }, {
                "name": "patroni",
                "protocol": "TCP",
                "port": 8009,
                "targetPort": 8009
            }
        ],
        "selector": {
            "role": "master"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "postgres-ha-replica",
        "labels": {
            "application": "postgres-ha",
            "name": "postgres-ha",
            "cleanup": "$CCP_NAMESPACE-postgres-ha"
        }
    },
    "spec": {
        "ports": [
            {
                "name": "postgres",
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432
            }, {
                "name": "patroni",
                "protocol": "TCP",
                "port": 8009,
                "targetPort": 8009
            }
        ],
        "selector": {
            "role": "replica"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "postgres-ha-01",
        "labels": {
            "application": "postgres-ha",
            "name": "postgres-ha-01",
            "cleanup": "$CCP_NAMESPACE-postgres-ha"
        }
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "application": "postgres-ha",
                    "name": "postgres-ha-01",
                    "cleanup": "$CCP_NAMESPACE-postgres-ha",
                    "cluster-name": "example-cluster"
                }
            },
            "spec": {
                "serviceAccountName": "postgres-ha-sa",
                "containers": [
                    {
                        "name": "postgres",
                        "image": "$CCP_IMAGE_PREFIX/crunchy-postgres-ha:$CCP_IMAGE_TAG",
                        "securityContext": {
                            "runAsUser": 26
                        },
                        "readinessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/health/pgha-readiness.sh"
                                ]
                            },
                            "initialDelaySeconds": 30
                        },
                        "livenessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/health/pgha-liveness.sh"
                                ]
                            },
                            "initialDelaySeconds": 30,
                            "periodSeconds": 15,
                            "timeoutSeconds": 10
                        },
                        "env": [
                            {
                                "name": "POD_IP",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "status.podIP"
                                    }
                                }
                            },
                            {
                                "name": "PATRONI_NAME",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.name"
                                    }
                                }
                            },
                            {
                                "name": "PATRONI_SCOPE",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.labels['cluster-name']"
                                    }
                                }
                            },
                            {
                                "name": "PGHA_PATRONI_PORT",
                                "value": "8009"
                            },
                            {
                                "name": "PATRONI_RESTAPI_LISTEN",
                                "value": "0.0.0.0:$(PGHA_PATRONI_PORT)"
                            },
                            {
                                "name": "PATRONI_RESTAPI_CONNECT_ADDRESS",
                                "value": "$(POD_IP):$(PGHA_PATRONI_PORT)"
                            },
                            {
                                "name": "PATRONI_KUBERNETES_NAMESPACE",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.namespace"
                                    }
                                }
                            },
                            {
                                "name": "PATRONI_KUBERNETES_LABELS",
                                "value": "{cleanup: \"$CCP_NAMESPACE-postgres-ha\"}"
                            },
                            {
                                "name": "PGHA_PG_PORT",
                                "value": "5432"
                            },
                            {
                                "name": "PATRONI_POSTGRESQL_LISTEN",
                                "value": "0.0.0.0:$(PGHA_PG_PORT)"
                            },
                            {
                                "name": "PATRONI_POSTGRESQL_CONNECT_ADDRESS",
                                "value": "$(POD_IP):$(PGHA_PG_PORT)"
                            },
                            {
                                "name": "PATRONI_POSTGRESQL_DATA_DIR",
                                "value": "/pgdata/postgres-ha-01"
                            },
                            {
                                "name": "PATRONI_LOG_LEVEL",
                                "value": "INFO"
                            },
                            {
                                "name": "PGHA_DATABASE",
                                "value": "userdb"
                            },
                            {
                                "name": "PGHA_PGBACKREST",
                                "value": "true"
                            },
                            {
                                "name": "PGHA_BASE_BOOTSTRAP_CONFIG",
                                "value": "true"
                            },
                            {
                                "name": "PGHA_BASE_PG_CONFIG",
                                "value": "true"
                            },
                            {
                                "name": "PGHA_PGBACKREST_INITIALIZE",
                                "value": "true"
                            },
                            {
                                "name": "PGHA_INIT",
                                "value": "true"
                            },
                            {
                                "name": "PGHA_CRUNCHYADM",
                                "value": "true"
                            },
                            {
                                "name": "PGHA_REPLICA_REINIT_ON_START_FAIL",
                                "value": "true"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/backrestrepo",
                                "name": "backrestrepo",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/pgconf/pguser",
                                "name": "pguser"
                            },
                            {
                                "mountPath": "/pgconf/pgsuper",
                                "name": "pgsuper"
                            },
                            {
                                "mountPath": "/pgconf/pgreplicator",
                                "name": "pgreplicator"
                            },
                            {
                                "mountPath": "/crunchyadm",
                                "name": "crunchyadm"
                            }
                        ],
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            },
                            {
                                "containerPort": 8009,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {},
                        "imagePullPolicy": "IfNotPresent"
                    }
                ],
                "volumes": [
                    {
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "postgres-ha-01-pgdata"
                        }
                    },
                    {
                        "name": "backrestrepo",
                        "persistentVolumeClaim": {
                            "claimName": "postgres-ha-backrestrepo"
                        }
                    },
                    {
                        "name": "pguser",
                        "secret": {
                            "secretName": "postgres-ha-pguser"
                        }
                    },
                    {
                        "name": "pgsuper",
                        "secret": {
                            "secretName": "postgres-ha-pgsuper"
                        }
                    },
                    {
                        "name": "pgreplicator",
                        "secret": {
                            "secretName": "postgres-ha-pgreplicator"
                        }
                    },
                    {
                        "name": "crunchyadm",
                        "emptyDir": {}
                    }
                ],
                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 30,
                "dnsPolicy": "ClusterFirst",
                "securityContext": {
                    $CCP_SECURITY_CONTEXT
                }
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}

