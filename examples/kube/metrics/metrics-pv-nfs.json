{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "$CCP_NAMESPACE-metrics-grafanadata",
        "labels": {
            "name": "$CCP_NAMESPACE-metrics-grafanadata",
            "cleanup": "$CCP_NAMESPACE-metrics"
        }
    },
    "spec": {
        "capacity": {
            "storage": "$CCP_STORAGE_CAPACITY"
        },
        "accessModes": [
            "$CCP_STORAGE_MODE"
        ],
        "nfs": {
            "path": "$CCP_STORAGE_PATH/$CCP_NAMESPACE-metrics",
            "server": "$CCP_NFS_IP"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}

