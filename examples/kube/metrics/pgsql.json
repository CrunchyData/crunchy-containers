{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgsql",
        "labels": {
            "name": "pgsql"
        }
    },
    "spec": {
        "ports": [{
            "name": "pgsql",
            "protocol": "TCP",
            "port": 5432,
            "targetPort": 5432,
            "nodePort": 0
        }, {
            "name": "node-exporter",
            "protocol": "TCP",
            "port": 9100,
            "targetPort": 9100,
            "nodePort": 0
        }, {
            "name": "postgres-exporter",
            "protocol": "TCP",
            "port": 9187,
            "targetPort": 9187,
            "nodePort": 0
        }],
        "selector": {
            "name": "pgsql"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    },
    "status": {
        "loadBalancer": {}
    }
}
{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgsql",
        "labels": {
            "name": "pgsql",
            "crunchy_collect": "true"
        }
    },
    "spec": {
        "securityContext": {
            $CCP_SECURITY_CONTEXT
        },
        "containers": [
            {
                "name": "collect",
                "image": "$CCP_IMAGE_PREFIX/crunchy-collect:$CCP_IMAGE_TAG",
                "ports": [
                    {
                        "containerPort": 9187,
                        "protocol": "TCP"
                    },
                    {
                        "containerPort": 9100,
                        "protocol": "TCP"
                    }
                ],
                "readinessProbe": {
                    "tcpSocket": {
                        "port": 9187
                    },
                    "initialDelaySeconds": 20,
                    "periodSeconds": 10
                },
                "livenessProbe": {
                    "tcpSocket": {
                        "port": 9187
                    },
                    "initialDelaySeconds": 15,
                    "periodSeconds": 20
                },
                "env": [
                    {
                        "name": "DATA_SOURCE_NAME",
                        "value": "postgresql://primaryuser:password@pgsql:5432/postgres?sslmode=disable"
                    }
                ]
            },
            {
                "name": "postgres",
                "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                "ports": [
                    {
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }
                ],
                "env": [
                    {
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    },
                    {
                        "name": "PG_MODE",
                        "value": "primary"
                    },
                    {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    },
                    {
                        "name": "PG_USER",
                        "value": "testuser"
                    },
                    {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    },
                    {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "password"
                    }
                ],
                "readinessProbe": {
                    "tcpSocket": {
                        "port": 5432
                    },
                    "initialDelaySeconds": 5,
                    "periodSeconds": 10
                },
                "volumeMounts": [
                    {
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "pgdata",
                "emptyDir": {}
            }
        ]
    }
}
