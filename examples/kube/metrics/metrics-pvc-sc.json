{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
        "name": "metrics-prometheusdata",
        "labels": {
            "cleanup": "$CCP_NAMESPACE-metrics"
        }
    },
    "spec": {
        "accessModes": [
            "$CCP_STORAGE_MODE"
        ],
        "storageClassName": "$CCP_STORAGE_CLASS",
        "resources": {
            "requests": {
                "storage": "$CCP_STORAGE_CAPACITY"
            }
        }
    }
}

