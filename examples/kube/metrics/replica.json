{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "replica-metrics",
        "labels": {
            "name": "replica-metrics",
            "cleanup": "$CCP_NAMESPACE-metrics"
        }
    },
    "spec": {
        "ports": [
            {
                "name": "replica-metrics",
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            },
            {
                "name": "postgres-exporter",
                "protocol": "TCP",
                "port": 9187,
                "targetPort": 9187,
                "nodePort": 0
            }
        ],
        "selector": {
            "name": "replica-metrics"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "replica-metrics",
        "labels": {
            "name": "replica-metrics",
            "cleanup": "$CCP_NAMESPACE-metrics"
        }
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "replica-metrics",
                    "crunchy_collect": "true",
                    "cleanup": "$CCP_NAMESPACE-metrics"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "collect",
                        "image": "$CCP_IMAGE_PREFIX/crunchy-collect:$CCP_IMAGE_TAG",
                        "ports": [
                            {
                                "containerPort": 9187,
                                "protocol": "TCP"
                            }
                        ],
                        "readinessProbe": {
                            "tcpSocket": {
                                "port": 9187
                            },
                            "initialDelaySeconds": 20,
                            "periodSeconds": 10
                        },
                        "livenessProbe": {
                            "tcpSocket": {
                                "port": 9187
                            },
                            "initialDelaySeconds": 40,
                            "periodSeconds": 10
                        },
                        "env": [
                            {
                                "name": "COLLECT_PG_HOST",
                                "value": "127.0.0.1"
                            },
                            {
                                "name": "COLLECT_PG_PORT",
                                "value": "5432"
                            },
                            {
                                "name": "COLLECT_PG_DATABASE",
                                "value": "postgres"
                            },
                            {
                                "name": "COLLECT_PG_PARAMS",
                                "value": "sslmode=disable"
                            },
                            {
                                "name": "POSTGRES_EXPORTER_PORT",
                                "value": "9187"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": true
                            },
                            {
                                "mountPath": "/pgwal",
                                "name": "pgwal",
                                "readOnly": true
                            },
                            {
                                "mountPath": "/backrestrepo",
                                "name": "backrestrepo",
                                "readOnly": true
                            },
                            {
                                "mountPath": "/collect-pguser",
                                "name": "collect-pguser"
                            }
                        ]
                    },
                    {
                        "name": "postgres",
                        "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                        "readinessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/readiness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 1
                        },
                        "livenessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/liveness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 1
                        },
                        "env": [
                            {
                                "name": "PG_PRIMARY_USER",
                                "value": "primaryuser"
                            },
                            {
                                "name": "PG_MODE",
                                "value": "replica"
                            },
                            {
                                "name": "PG_PRIMARY_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "value": "5432"
                            },
                            {
                                "name": "PG_PRIMARY_HOST",
                                "value": "primary-metrics"
                            },
                            {
                                "name": "PG_USER",
                                "value": "testuser"
                            },
                            {
                                "name": "PG_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PG_DATABASE",
                                "value": "userdb"
                            },
                            {
                                "name": "PG_ROOT_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PGMONITOR_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PGHOST",
                                "value": "/tmp"
                            },
                            {
                                "name": "PGDATA_PATH_OVERRIDE",
                                "value": "replica-metrics"
                            },
                            {
                                "name": "ARCHIVE_TIMEOUT",
                                "value": "60"
                            },
                            {
                                "name": "XLOGDIR",
                                "value": "true"
                            },
                            {
                                "name": "PGBACKREST",
                                "value": "true"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/pgwal",
                                "name": "pgwal",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/backrestrepo",
                                "name": "backrestrepo",
                                "readOnly": false
                            }
                        ],
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {},
                        "imagePullPolicy": "IfNotPresent"
                    }
                ],
                "volumes": [
                    {
                        "name": "pgdata",
                        "emptyDir": {
			    "medium": "Memory"
			}
                    },
                    {
                        "name": "pgwal",
                        "emptyDir": {
			    "medium": "Memory"
			}
                    },
                    {
                        "name": "backrestrepo",
                        "emptyDir": {
			    "medium": "Memory"
			}
                    },
                    {
                        "name": "collect-pguser",
                        "secret": {
                            "secretName": "collect-pguser"
                        }
                    }
                ],
                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 30,
                "dnsPolicy": "ClusterFirst"
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}
