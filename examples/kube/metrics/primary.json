{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "primary",
        "labels": {
            "name": "primary"
        }
    },
    "spec": {
        "ports": [
            {
                "name": "primary",
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            },
            {
                "name": "node-exporter",
                "protocol": "TCP",
                "port": 9100,
                "targetPort": 9100,
                "nodePort": 0
            },
            {
                "name": "postgres-exporter",
                "protocol": "TCP",
                "port": 9187,
                "targetPort": 9187,
                "nodePort": 0
            }
        ],
        "selector": {
            "name": "primary"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "primary",
        "labels": {
            "name": "primary"
        }
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "primary",
                    "crunchy_collect": "true"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "collect",
                        "image": "$CCP_IMAGE_PREFIX/crunchy-collect:$CCP_IMAGE_TAG",
                        "ports": [
                            {
                                "containerPort": 9187,
                                "protocol": "TCP"
                            },
                            {
                                "containerPort": 9100,
                                "protocol": "TCP"
                            }
                        ],
                        "readinessProbe": {
                            "tcpSocket": {
                                "port": 9187
                            },
                            "initialDelaySeconds": 20,
                            "periodSeconds": 10
                        },
                        "livenessProbe": {
                            "tcpSocket": {
                                "port": 9187
                            },
                            "initialDelaySeconds": 40,
                            "periodSeconds": 10
                        },
                        "env": [
                            {
                                "name": "DATA_SOURCE_NAME",
                                "value": "postgresql://ccp_monitoring:password@127.0.0.1:5432/postgres?sslmode=disable"
                            },
                            {
                                "name": "JOB_NAME",
                                "value": "primary"
                            }
                        ]
                    },
                    {
                        "name": "postgres",
                        "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                        "readinessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/readiness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 1
                        },
                        "livenessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/liveness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 1
                        },
                        "env": [
                            {
                                "name": "PG_PRIMARY_USER",
                                "value": "primaryuser"
                            },
                            {
                                "name": "PG_MODE",
                                "value": "primary"
                            },
                            {
                                "name": "PG_PRIMARY_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "value": "5432"
                            },
                            {
                                "name": "PG_USER",
                                "value": "testuser"
                            },
                            {
                                "name": "PG_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PG_DATABASE",
                                "value": "userdb"
                            },
                            {
                                "name": "PG_ROOT_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PGMONITOR_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PGHOST",
                                "value": "/tmp"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            }
                        ],
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {},
                        "imagePullPolicy": "IfNotPresent"
                    }
                ],
                "volumes": [
                    {
                        "name": "pgdata",
                        "emptyDir": {}
                    }
                ],
                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 30,
                "dnsPolicy": "ClusterFirst",
                "securityContext": {
                    $CCP_SECURITY_CONTEXT
                }
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}
