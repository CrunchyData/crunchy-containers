{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
      "name": "primary-deployment-pgdata"
    },
    "spec": {
      "selector": {
        "matchLabels": {
          "name": "$CCP_NAMESPACE-primary-deployment-pgdata"
        }
      },
      "accessModes": [
        "$CCP_STORAGE_MODE"
      ],
      "resources": {
        "requests": {
          "storage": "$CCP_STORAGE_CAPACITY"
        }
      }
    }
}

