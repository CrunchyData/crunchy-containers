{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgbouncer-primary",
        "labels": {
            "name": "pgbouncer-primary",
            "cleanup": "$CCP_NAMESPACE-pgbouncer"
        }
    },
    "spec": {
        "ports": [
            {
                "protocol": "TCP",
                "port": 6432,
                "targetPort": 6432,
                "nodePort": 0
            }
        ],
        "selector": {
            "name": "pgbouncer-primary"
        }
    },
    "status": {
        "loadBalancer": {}
    }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgbouncer-primary",
        "labels": {
            "name": "pgbouncer-primary",
            "cleanup": "$CCP_NAMESPACE-pgbouncer"
        }
    },
    "spec": {
        "securityContext": {
            $CCP_SECURITY_CONTEXT
        },
        "volumes": [
            {
                "name": "pgconf",
                "emptyDir": {
			    "medium": "Memory"
			}
            }
        ],
        "containers": [
            {
                "name": "pgbouncer",
                "image": "$CCP_IMAGE_PREFIX/crunchy-pgbouncer:$CCP_IMAGE_TAG",
                "ports": [
                    {
                        "containerPort": 6432,
                        "protocol": "TCP"
                    }
                ],
                "readinessProbe": {
                    "tcpSocket": {
                        "port": 6432
                    },
                    "initialDelaySeconds": 20,
                    "periodSeconds": 10
                },
                "env": [
                    {
                        "name": "PGBOUNCER_PASSWORD",
                        "valueFrom": {
                            "secretKeyRef": {
                                "name": "pgbouncer-secrets",
                                "key": "pgbouncer-password"
                            }
                        }
                    },
                    {
                        "name": "PG_SERVICE",
                        "value": "pg-primary"
                    }
                ],
                "volumeMounts": [
                    {
                        "mountPath": "/pgconf",
                        "name": "pgconf",
                        "readOnly": false
                    }
                ]
            }
        ]
    }
}
