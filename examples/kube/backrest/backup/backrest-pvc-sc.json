{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
        "name": "br-pgdata",
        "labels": {
            "cleanup": "$CCP_NAMESPACE-backrest"
        }
    },
    "spec": {
        "accessModes": [
            "$CCP_STORAGE_MODE"
        ],
        "storageClassName": "$CCP_STORAGE_CLASS",
        "resources": {
            "requests": {
                "storage": "$CCP_STORAGE_CAPACITY"
            }
        }
    }
}

{
  "kind": "PersistentVolumeClaim",
  "apiVersion": "v1",
  "metadata": {
      "name": "br-backups",
      "labels": {
          "cleanup": "$CCP_NAMESPACE-backrest"
      }
  },
  "spec": {
      "accessModes": [
          "$CCP_STORAGE_MODE"
      ],
      "storageClassName": "$CCP_STORAGE_CLASS",
      "resources": {
          "requests": {
              "storage": "$CCP_STORAGE_CAPACITY"
          }
      }
  }
}