{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
        "name": "custom-config-ssl-pgconf"
    },
    "spec": {
        "accessModes": [
            "ReadWriteMany"
        ],
        "resources": {
            "requests": {
                "storage": "400M"
            }
        }
    }
}

{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "custom-config-ssl",
        "labels": {
            "name": "custom-config-ssl"
        }
    },
    "spec": {
        "ports": [
            {
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }
        ],
        "selector": {
            "name": "custom-config-ssl"
        },
        "type": "ClusterIP"
    }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "custom-config-ssl",
        "labels": {
            "name": "custom-config-ssl"
        }
    },
    "spec": {
        "securityContext": {
            $CCP_SECURITY_CONTEXT
        },
        "volumes": [
            {
                "name": "pgconf",
                "persistentVolumeClaim": {
                    "claimName": "custom-config-ssl-pgconf"
                }
            },
            {
                "name": "pgdata",
                "emptyDir": {}
            }
        ],
        "containers": [
            {
                "name": "postgres",
                "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                "ports": [
                    {
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }
                ],
                "env": [
                    {
                        "name": "PGHOST",
                        "value": "/tmp"
                    },
                    {
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    },
                    {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    },
                    {
                        "name": "PG_MODE",
                        "value": "primary"
                    },
                    {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_USER",
                        "value": "testuser"
                    },
                    {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    },
                    {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "password"
                    }
                ],
                "volumeMounts": [
                    {
                        "mountPath": "/pgconf/custom-config-ssl-pgconf",
                        "name": "pgconf",
                        "readOnly": true
                    },
                    {
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }
                ]
            }
        ]
    }
}
