{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
      "name": "custom-config-ssl-pgdata"
    },
    "spec": {
      "selector": {
        "matchLabels": {
          "name": "custom-config-ssl-pgdata"
        }
      },
      "accessModes": [
        "$CCP_STORAGE_MODE"
      ],
      "resources": {
        "requests": {
          "storage": "$CCP_STORAGE_CAPACITY"
        }
      }
    }
}

{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
      "name": "custom-config-ssl-backrestrepo"
    },
    "spec": {
      "selector": {
        "matchLabels": {
          "name": "custom-config-ssl-backrestrepo"
        }
      },
      "accessModes": [
        "$CCP_STORAGE_MODE"
      ],
      "resources": {
        "requests": {
          "storage": "$CCP_STORAGE_CAPACITY"
        }
      }
    }
}

{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "custom-config-ssl",
        "labels": {
            "name": "custom-config-ssl"
        }
    },
    "spec": {
        "ports": [
            {
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }
        ],
        "selector": {
            "name": "custom-config-ssl"
        },
        "type": "ClusterIP"
    }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "custom-config-ssl",
        "labels": {
            "name": "custom-config-ssl"
        }
    },
    "spec": {
        "securityContext": { $CCP_SECURITY_CONTEXT },
        "containers": [
            {
                "name": "postgres",
                "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                "ports": [
                    {
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }
                ],
                "env": [
                    {
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    },
                    {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    },
                    {
                        "name": "PG_MODE",
                        "value": "primary"
                    },
                    {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PGHOST",
                        "value": "/tmp"
                    },
                    {
                        "name": "PG_USER",
                        "value": "testuser"
                    },
                    {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    },
                    {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "ARCHIVE_TIMEOUT",
                        "value": "60"
                    }
                ],
                "volumeMounts": [
                    {
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    },
                    {
                        "mountPath": "/pgconf",
                        "name": "pgconf",
                        "readOnly": true
                    },
                    {
                        "mountPath": "/backrestrepo",
                        "name": "backrestrepo",
                        "readOnly": false
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "backrestrepo",
                "persistentVolumeClaim": {
                    "claimName": "custom-config-ssl-backrestrepo"
                }
            },
            {
                "name": "pgdata",
                "persistentVolumeClaim": {
                    "claimName": "custom-config-ssl-pgdata"
                }
            },
            {
                "name": "pgconf",
                "secret": {
                    "secretName": "postgres-ssl-secrets",
                    "items": [
                        {
                            "key": "ca-crt",
                            "path": "ca.crt",
                            "mode": 384
                        },
                        {
                            "key": "ca-crl",
                            "path": "ca.crl",
                            "mode": 384
                        },
                        {
                            "key": "server-crt",
                            "path": "server.crt",
                            "mode": 384
                        },
                        {
                            "key": "server-key",
                            "path": "server.key",
                            "mode": 256
                        },
                        {
                            "key": "pgbackrest-conf",
                            "path": "pgbackrest.conf",
                            "mode": 256
                        },
                        {
                            "key": "postgresql-conf",
                            "path": "postgresql.conf",
                            "mode": 256
                        },
                        {
                            "key": "pg-hba-conf",
                            "path": "pg_hba.conf",
                            "mode": 256
                        }
                    ]
                }
            }
        ]
    }
}
