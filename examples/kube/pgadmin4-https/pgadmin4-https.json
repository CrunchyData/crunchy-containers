{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgadmin4-https",
        "labels": {
            "name": "pgadmin4-https"
        }
    },
    "spec": {
        "ports": [{
            "name": "pgadmin4-https",
            "protocol": "TCP",
            "port": 5050,
            "targetPort": 5050,
            "nodePort": 30000
        }],
        "selector": {
            "name": "pgadmin4-https"
        },
        "type": "NodePort",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgadmin4-https",
        "labels": {
            "name": "pgadmin4-https"
        }
    },
    "spec": {
        "securityContext": {
            $CCP_SECURITY_CONTEXT
        },
        "volumes": [
            {
                "name": "pgadmin",
                "persistentVolumeClaim": {
                    "claimName": "pgadmin4-https-data"
                }
            },
            {
                "name": "certs",
                "secret": {
                    "secretName": "pgadmin4-https-tls",
                    "items": [
                        {
                            "key": "pgadmin-cert",
                            "path": "server.crt"
                        },
                        {
                            "key": "pgadmin-key",
                            "path": "server.key"
                        }
                    ]
                }
            },
            {
                "name": "run",
                "emptyDir": {}
            }
        ],
        "containers": [
            {
                "name": "pgadmin",
                "image": "$CCP_IMAGE_PREFIX/crunchy-pgadmin4:$CCP_IMAGE_TAG",
                "ports": [
                    {
                        "containerPort": 5050,
                        "protocol": "TCP"
                    }
                ],
                "env": [
                    {
                        "name": "PGADMIN_SETUP_EMAIL",
                        "valueFrom": {
                            "secretKeyRef": {
                                "name": "pgadmin4-https-secrets",
                                "key": "pgadmin-email"
                            }
                        }
                    },
                    {
                        "name": "PGADMIN_SETUP_PASSWORD",
                        "valueFrom": {
                            "secretKeyRef": {
                                "name": "pgadmin4-https-secrets",
                                "key": "pgadmin-password"
                            }
                        }
                    },
                    {
                        "name": "ENABLE_TLS",
                        "value": "true"
                    }
                ],
                "volumeMounts": [
                    {
                        "mountPath": "/var/lib/pgadmin",
                        "name": "pgadmin",
                        "readOnly": false
                    },
                    {
                        "mountPath": "/certs",
                        "name": "certs",
                        "readOnly": true
                    },
                    {
                        "mountPath": "/run/httpd",
                        "name": "run",
                        "readOnly": false
                    }
                ]
            }
        ]
    }
}
