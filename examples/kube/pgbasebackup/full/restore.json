{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "restore"
    },
    "spec": {
        "backoffLimit": 0,
        "template": {
            "metadata": {
                "name": "restore",
                "labels": {
                    "app": "restore",
                    "cleanup": "$CCP_NAMESPACE-restore"
                }
            },
            "spec": {
                "volumes": [
                    {
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "restore-pgdata"
                        }
                    },
                    {
                        "name": "backup",
                        "persistentVolumeClaim": {
                            "claimName": "backup-pgdata"
                        }
                    }
                ],
                "securityContext": {
                    $CCP_SECURITY_CONTEXT
                },
                "containers": [
                    {
                        "name": "backup",
                        "image": "$CCP_IMAGE_PREFIX/crunchy-pgbasebackup-restore:$CCP_IMAGE_TAG",
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/backup",
                                "name": "backup",
                                "readOnly": true
                            }
                        ],
                        "env": [
                            {
                                "name": "BACKUP_PATH",
                                "value": "primary-backups/2020-02-08-18-28-45"
                            },
                            {
                                "name": "PGDATA_PATH",
                                "value": "pgbasebackup-full-restored"
                            }
                        ]
                    }
                ],
                "restartPolicy": "Never"
            }
        }
    }
}
