{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "restore-pitr",
        "labels": {
            "name": "restore-pitr",
            "cleanup": "$CCP_NAMESPACE-restore-pitr"
        }
    },
    "spec": {
        "ports": [
            {
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }
        ],
        "selector": {
            "name": "restore-pitr"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    },
    "status": {
        "loadBalancer": {}
    }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "restore-pitr",
        "labels": {
            "name": "restore-pitr",
            "cleanup": "$CCP_NAMESPACE-restore-pitr"
        }
    },
    "spec": {
        "securityContext": {
            $CCP_SECURITY_CONTEXT
        },
        "volumes": [
            {
                "name": "pgdata",
                "persistentVolumeClaim": {
                    "claimName": "restore-pitr-pgdata"
                }
            },
            {
                "name": "pgwal",
                "emptyDir": {
			    "medium": "Memory"
			}
            },
            {
                "name": "recover",
                "persistentVolumeClaim": {
                    "claimName": "pitr-pgwal"
                }
            },
            {
                "name": "backup",
                "persistentVolumeClaim": {
                    "claimName": "backup-pitr-pgdata"
                }
            }
        ],
        "containers": [
            {
                "name": "postgres",
                "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 1
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 1
                },
                "ports": [
                    {
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }
                ],
                "env": [
                    {
                        "name": "PG_PRIMARY_USER",
                        "value": "primaryuser"
                    },
                    {
                        "name": "PG_MODE",
                        "value": "primary"
                    },
                    {
                        "name": "PG_MODE",
                        "value": "primary"
                    },
                    {
                        "name": "WAL_DIR",
                        "value": "pitr-wal"
                    },
                    {
                        "name": "ARCHIVE_MODE",
                        "value": "on"
                    },
                    {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_USER",
                        "value": "testuser"
                    },
                    {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    },
                    {
                        "name": "BACKUP_PATH",
                        "value": "pitr-backups/2019-03-08-15-04-02"
                    },
                    {
                        "name": "RECOVERY_TARGET_NAME",
                        "value": "beforechanges"
                    },
                    {
                        "name": "PGHOST",
                        "value": "/tmp"
                    },
                    {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    },
                    {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "password"
                    }
                ],
                "volumeMounts": [
                    {
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    },
                    {
                        "mountPath": "/pgwal",
                        "name": "pgwal",
                        "readOnly": false
                    },
                    {
                        "mountPath": "/recover",
                        "name": "recover",
                        "readOnly": true
                    },
                    {
                        "mountPath": "/backup",
                        "name": "backup",
                        "readOnly": true
                    }
                ]
            }
        ]
    }
}
