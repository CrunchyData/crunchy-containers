{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "nfs-pv-03"
  },
  "spec": {
    "capacity": {
        "storage": "300M"
    },
    "accessModes": [ "ReadWriteMany" ],
    "nfs": {
        "path": "/nfsfileshare",
        "server": "$LOCAL_IP"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
